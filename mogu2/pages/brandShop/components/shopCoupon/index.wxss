}

.shopCoupon-2-r {
}

.shopCoupon-long-r-t {
    width: 100%;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    font-weight: 600;
    color: #ffffff;
}

.shopCoupon-long-r-b {
    width: 100%;
    height: 30rpx;
    line-height: 30rpx;
    font-size: 22rpx;
    color: #ffffff;
}