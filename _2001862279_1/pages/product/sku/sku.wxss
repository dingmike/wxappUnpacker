.goods_item {
    height: 224rpx;
    display: flex;
    padding: 20rpx;
    box-sizing: border-box;
    border-bottom: 1rpx solid #e2e2e2;
}

.goods_item_hd {
    width: 180rpx;
    height: 180rpx;
    margin-right: 20rpx;
}

.goods_item_hd image {
    width: 100%;
    height: 100%;
    background-color: #fbfbfb;
}

.goods_item_bd {
    flex: 1;
    width: 0%;
}

.goods_item_title {
    font-size: 14px;
    color: #777;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    line-height: 1.6;
}

.goods_item_price {
    font-size: 42rpx;
    margin-top: 28rpx;
    font-weight: 300;
    color: #222;
}

.sku_bd {
    padding: 20rpx;
    font-size: 14px;
}

.sku_group {
    margin-bottom: 10rpx;
}

.sku_group_title {
    margin-bottom: 10rpx;
}

.sku_choose_item {
    display: inline-block;
    border: 1rpx solid #e2e2e2;
    border-radius: 4px;
    height: 30px;
    line-height: 28px;
    box-sizing: border-box;
    padding: 0 20rpx;
    min-width: 100rpx;
    text-align: center;
    margin-right: 10px;
    margin-bottom: 10px;
}

.sku_choose_item.selected {
    border-color: #1AAD16;
    color: #1AAD16;
}

.sku_choose_item.disabled {
    color: #bbb;
}

.sku_ft {
    padding: 0 20rpx;
}

.editor {
    display: inline-block;
}

.editor_remove,.editor_add {
    width: 72rpx;
    height: 60rpx;
    line-height: 54rpx;
    text-align: center;
    font-size: 24px;
    color: #999;
    border: 1rpx solid #e2e2e2;
    background-color: #fbfbfb;
    vertical-align: top;
}

.editor_input {
    width: 64rpx;
    border-top: 1rpx solid #e2e2e2;
    border-bottom: 1rpx solid #e2e2e2;
    height: 60rpx;
    vertical-align: top;
    padding: 0 10rpx;
    text-align: center;
}

.editor_remove {
    border-radius: 5px 0 0 5px;
}

.editor_add {
    border-radius: 0 5px 5px 0;
}

.sku_froup_count {
    margin-bottom: 20rpx;
}

.error_msg {
    margin-top: 10rpx;
    color: #ff5027;
}

.quantity_Limit {
    color: #999;
}