.buy-couponlist {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    justify-content: center;
    z-index: 101;
}

.ui-mask {
    position: absolute;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    z-index: 101;
    background-color: rgba(0,0,0,0.4);
}

.buy-couponlist-content {
    align-items: center;
    justify-content: center;
    width: 100%;
    z-index: 102;
    background: #fff;
    flex-direction: column;
}

.buy-couponlist-content--title {
    text-align: center;
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    position: relative;
    color: #999;
    border-bottom: 1rpx solid #e5e5e5;
    font-size: 32rpx;
}

.buy-couponlist-content--close {
    padding: 0;
    text-align: center;
    border-radius: 0;
    position: absolute;
    font-size: 30rpx;
    right: 25rpx;
    top: 0rpx;
    width: 50rpx;
    color: #333;
}

.buy-couponlist-content--list {
    padding: 0rpx 0 80rpx 30rpx;
    font-size: 28rpx;
    color: #333;
    overflow-y: scroll;
    max-height: 430rpx;
    width: 100%;
    box-sizing: border-box;
}

.couponItem {
    border-bottom: 1rpx solid #e5e5e5;
    line-height: 40rpx;
    border-radius: 0;
    background: #fff;
    text-align: left;
    padding: 25rpx 0;
    font-size: 28rpx;
    color: #333;
    text-align: left;
}

.couponItem:before,.couponItem:after {
    display: none;
}

.couponItem-active {
    color: #FF5575!important;
}

.couponItem-desc {
    flex: 1;
    padding: 0 42rpx 0 24rpx;
}

.couponItem-icon--unvisi {
    visibility: hidden;
}