page {
    width: 100%;
    height: 100%;
    background-color: #353535;
    text-align: center;
}

.poster {
    height: 1050rpx;
    width: 690rpx;
    background-color: white;
    border-radius: 10rpx;
    margin: 40rpx auto 30rpx auto;
    box-shadow: 0 0 15rpx rgba(0,0,0,0.9);
}

.downLoad {
    width: 690rpx;
    height: 100rpx;
    background-color: #ffe13d;
    font-size: 30rpx;
    line-height: 100rpx;
    border-radius: 100rpx;
    margin: 0 auto;
    box-shadow: 0 0 15rpx rgba(0,0,0,0.9);
}

.hint {
    font-size: 24rpx;
    color: white;
    margin-top: 20rpx;
}