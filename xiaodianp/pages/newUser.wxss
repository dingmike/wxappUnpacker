.category-title {
    padding: 20rpx;
    display: -webkit-box;
    display: flex;
    -webkit-box-pack: center;
    justify-content: center;
}

.category-title .name {
    display: -webkit-box;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    text-align: center;
    color: #000;
    margin: 30rpx 0;
    width: 100%;
    line-height: 1.4;
    letter-spacing: 3rpx;
    text-transform: uppercase;
}

.category-title .name image {
    height: 52rpx;
    object-fit: contain;
}

.category-title .name .zh {
    position: relative;
    font-size: 30rpx;
    font-weight: 600;
    letter-spacing: 10rpx;
    padding-left: 10rpx;
}

.category-title .name .en {
    font-size: 18rpx;
    font-weight: 300;
    color: #999;
}

.category-title .zh:before {
    content: '';
    position: absolute;
    width: 150rpx;
    height: 1px;
    background-color: #dcdcdc;
    margin-left: -180rpx;
    top: 50%;
}

.category-title .zh:after {
    content: '';
    position: absolute;
    width: 150rpx;
    height: 1px;
    background-color: #dcdcdc;
    margin-left: 20rpx;
    top: 50%;
}

.big-bannner {
    display: -webkit-box;
    display: flex;
    -webkit-box-pack: center;
    justify-content: center;
    position: relative;
}

.big-bannner image {
    width: 94%;
    margin: 20rpx;
}

.item-btn {
    background-color: #f2f2f2;
    padding: 56rpx 0;
}

.item-btn .mall_btn {
    width: 540rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-radius: 40rpx;
    background-color: #ffffff;
    font-size: 15px;
    margin: 0 auto;
}

.item-btn .mall_btn .triangle {
    display: inline-block;
    width: 0;
    height: 0;
    border-top: 12rpx solid transparent;
    border-left: 16rpx solid #000;
    border-bottom: 12rpx solid transparent;
    margin-left: 20rpx;
}

.seeloading {
    margin-top: 160px;
    background-color: #ffffff;
    text-align: center;
    color: #999;
    font-size: 13px;
    padding: 50rpx 0 50rpx 0;
    heigth: 100%;
    width: 100%;
}

.seeloading .img_view .seeloading_img {
    margin-top: 0;
    width: 78rpx;
    height: 78rpx;
    border-radius: 50%;
}

.seeloading_gray {
    background-color: #f2f2f2;
    text-align: center;
    color: #999;
    font-size: 13px;
    padding: 50rpx 0 50rpx 0;
    heigth: 100%;
    width: 100%;
}

.seeloading_gray .img_view .seeloading_img {
    margin-top: 0;
    width: 78rpx;
    height: 78rpx;
    border-radius: 50%;
}

.button-hover {
    opacity: .6;
}