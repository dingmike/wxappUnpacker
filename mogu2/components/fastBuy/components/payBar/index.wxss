@import "../../../cashier/index.wxss";

.paybar {
    height: 100rpx;
    line-height: 100rpx;
    border-top: 1rpx solid #e5e5e5;
    background: #ff5777;
    width: 100%;
    position: fixed;
    bottom: 0;
    z-index: 100;
    color: #fff;
    text-align: center;
}

.paybar-normal {
    height: 100rpx;
    border-top: 1rpx solid #e5e5e5;
    padding-left: 32rpx;
    background: #fff;
    width: 100%;
    position: fixed;
    bottom: 0;
    z-index: 100;
}

.paybar-detail {
    flex: 1;
    flex-flow: row nowrap;
    align-items: center;
}

.paybar-detail--presale {
    align-items: center;
}

.paybar-num {
    font-size: 22rpx;
    color: #999;
}

.paybar-sum {
    font-size: 28rpx;
    color: #333;
    margin-top: 4px;
    font-family: Arial;
    flex: 1;
}

.paybar-sum--red {
    font-size: 36rpx;
    color: #FF1B51;
}

.paybar-btn {
    display: block;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    background: #ff5575;
    color: #fff;
    font-size: 28rpx;
    border-radius: 0;
}

.paybar-normal-btn:before,.paybar-btn:before,.paybar-normal-btn:after,.paybar-btn:after {
    display: none;
}

.paybar-normal-btn {
    display: block;
    width: 200rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    background: #ff5575;
    color: #fff;
    font-size: 28rpx;
    border-radius: 0;
}

.payredpacket {
    font-size: 22rpx;
    color: #ff5777;
    line-height: 30rpx;
}