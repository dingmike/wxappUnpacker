.mvw-game-mask {
    position: fixed;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.7);
    top: 0;
    left: 0;
    z-index: 100;
}

.mvw-game-pop-bg {
    z-index: 101;
    position: fixed;
    width: 84%;
    height: 714rpx;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    -webkit-transform: translate(-50%,-50%);
    padding-top: 60rpx;
    color: #fff;
    line-height: 1.4;
}

.mvw-game-pop-close {
    display: block;
    width: 76rpx;
    height: 76rpx;
    position: absolute;
    z-index: 3;
    right: 11rpx;
    top: 10rpx;
}

