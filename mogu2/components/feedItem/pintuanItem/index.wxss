.pintuan-item-wrapper {
    font-size: 24rpx;
    color: #333;
    padding: 0 24rpx 24rpx;
    margin-bottom: 18rpx;
    background: #fff;
}

.pintuan-item-header {
    width: 100%;
    height: 60rpx;
}

.pintuan-icon-orange {
    color: #FD7456;
}

.pintuan-icon-purple {
    color: #6D5BDB;
}

.pintuan-icon-pink {
    color: #FF607E;
}

.pintuan-item-icon {
    margin-right: 5rpx;
    margin-top: 3rpx;
}

.pintuan-item-header-sale {
    color: #999;
}

.pintuan-item-content {
    padding-bottom: 20rpx;
    border-bottom: 1rpx #E5E5E5 solid;
    text-align: left;
}

.pintuan-item-content-left {
    width: 220rpx;
    height: 220rpx;
    overflow: hidden;
    margin-right: 24rpx;
    position: relative;
}

.pintuan-item-content-image {
    width: 100%;
    height: 100%;
}

.pintuan-item-content-sold {
    width: 220rpx;
    height: 220rpx;
    position: absolute;
    top: 0;
    left: 0;
    background: url(https://s10.mogucdn.com/mlcdn/c45406/171222_464b68e8clj3fh7cgbjg9jakcbi4g_222x222.png) no-repeat;
    background-size: 100% auto;
    z-index: 3;
}

.pintuan-item-right-title {
    font-size: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    max-width: 460rpx;
    margin-bottom: 8rpx;
    height: 84rpx;
}

.pintuan-item-right-price {
    text-decoration: line-through;
    color: #999;
    margin-bottom: 12rpx;
}

.pintuan-item-right-promotion {
    font-size: 36rpx;
    color: #FB4747;
}

.pintuan-item-right-user {
    width: 32rpx;
    height: 32rpx;
    border-radius: 50%;
    overflow: hidden;
}

.pintuan-item-right-spec {
    margin-left: 8rpx;
    max-width: 410rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    position: relative;
    padding-left: 22rpx;
}

.pintuan-item-right-spec::before {
    position: absolute;
    top: 4rpx;
    left: 0;
    width: 18rpx;
    height: 15rpx;
    background: url(https://s10.mogucdn.com/mlcdn/c45406/171222_43fjj1e9fbab6baj1f7aaf4e5k80l_18x15.png) no-repeat;
    background-size: 100% auto;
    content: '';
}

.pintuan-item-bottom {
    padding-top: 14rpx;
    color: #999;
}

.pintuan-shop-name-desc {
    max-width: 400rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.pintuan-item-shop-icon {
    margin-right: 5rpx;
}

.pintuan-item-shop-good {
    display: inline-block;
    padding: 0 20rpx;
    border: 2rpx solid #bbb;
    color: #999;
    height: 48rpx;
    line-height: 48rpx;
    border-radius: 30rpx;
    margin: 0;
    font-size: 24rpx;
    background: #fff;
    outline: none;
}

button::after {
    border: none;
}