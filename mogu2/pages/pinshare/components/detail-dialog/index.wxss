@import "../modal/index.wxss";

@import "../../../../components/countdown/index.wxss";

@import "../../../../components/skudialog/index.wxss";

@import "../../../../components/mask/index.wxss";

@import "../../../../components/loading/index.wxss";

.pin-dialog-wrap {
    width: 750rpx;
    min-height: 338rpx;
    padding: 24rpx;
    padding-top: 26rpx;
    justify-content: space-between;
    background: #fdf7f7;
}

.pin-dialog-content {
    position: relative;
    width: 702rpx;
    min-height: 209rpx;
    background: #fff;
    margin-bottom: 24rpx;
    border-radius: 4rpx;
    text-align: center;
    z-index: 2;
}

.pin-dialog-bgimage {
    position: absolute;
    width: 702rpx;
    height: 234rpx;
}

.pin-dialog-content::before {
    position: absolute;
    top: -44rpx;
    left: 316rpx;
    width: 0;
    height: 0;
    border-width: 28rpx;
    border-style: solid;
    border-color: transparent transparent #fff transparent;
    content: " ";
    display: block;
}

.pin-dialog-join {
    height: 33rpx;
    margin-top: 8rpx;
    line-height: 33rpx;
    font-size: 24rpx;
    color: #333;
}

.pin-dialog-join-large {
}

.pin-dialog-big {
    font-size: 40rpx;
}

.pin-dialog-red {
    margin-right: 5rpx;
    color: #ff5777;
}

.pin-dialog-green {
    color: #3aba2f;
}

.pin-dialog-remain {
    height: 33rpx;
    line-height: 33rpx;
    font-size: 24rpx;
    color: #333;
}

.pin-dialog-time {
    display: inline-block;
    width: 124rpx;
    height: 33rpx;
    margin-left: 10rpx;
    line-height: 33rpx;
    font-size: 26rpx;
    color: #fff;
}

.cart-num {
    font-size: 22rpx;
    margin: 0 3rpx;
    color: #fff;
    font-weight: bold;
    background: #000;
    border-radius: 4rpx;
    padding: 1rpx 3rpx;
}

.cart-symbol {
    font-size: 26rpx;
    color: #000;
}

.countdown-item {
    color: rgb(255,87,119);
}

.pin-dialog-users {
    display: inline-block;
    width: 624rpx;
    min-height: 120rpx;
    margin: 30rpx auto 30rpx;
    z-index: 100;
}

.pin-dialog-share {
    width: 702rpx;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 32rpx;
    border-radius: 4rpx;
    padding: 0;
    background: #ff5777;
    color: #fff;
}

.cps-dialog-wrap {
    width: 702rpx;
}

.cps-dialog-share {
    width: 342rpx;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 32rpx;
    border-radius: 4rpx;
    padding: 0;
    background: #ff5777;
    color: #fff;
    margin-right: 18rpx;
}

.pin-dialog-share-wx {
    width: 320rpx;
    height: 74rpx;
    margin: 0 auto;
    border-radius: 100px;
    background-color: #2ad02a;
}

.pin-dialog-share-pink {
    font-size: 28rpx;
    color: #666;
    background: #ffe7e7;
}

.pin-dialog-chou {
    color: #333;
    font-weight: bold;
    margin: 0 10rpx;
}

.pin-dialog-share-logo {
    width: 40rpx;
    height: 40rpx;
    margin-left: 5px;
}

.pin-dialog-share::after {
    border: none;
}

.pin-dialog-rulelogo {
    position: absolute;
    right: 0;
    width: 60rpx;
    height: 70rpx;
    border-radius: 0 0 150rpx 150rpx;
    padding: 4rpx 10rpx;
    font-size: 20rpx;
    line-height: 1.3;
    color: #333;
    background: #ffd682;
    z-index: 100;
}

.user-con {
    margin: 0 auto;
    min-height: 110rpx;
    max-height: 480rpx;
    overflow: hidden;
}

.user-item {
    position: relative;
    height: 70rpx;
    width: 70rpx;
    margin: 0 16rpx 32rpx 0;
}

.user-avatar {
    height: 70rpx;
    width: 70rpx;
    border-radius: 40rpx;
    overflow: hidden;
}

.user-pic {
    width: 70rpx;
    height: 70rpx;
}

.captain-logo {
    position: absolute;
    left: 9rpx;
    bottom: -12rpx;
    width: 56rpx;
    height: 26rpx;
    line-height: 26rpx;
    border-radius: 100rpx;
    font-size: 20rpx;
    color: #fff;
    background: rgb(255,87,119);
}

.captain-logo-border {
    border: 1px solid #ff5777;
}

.user-button {
    height: 80rpx;
    width: 100%;
    border-top: 1rpx solid #e5e5e5;
    font-size: 24rpx;
    color: #999;
}

.oneline {
    min-height: 100rpx;
    height: 100rpx;
}

.multiline {
    overflow: scroll;
}

.m-icon {
    padding: 5rpx 7rpx;
}