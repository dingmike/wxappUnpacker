@import "../../../../components/heading/index.wxss";

@import "../../../../components/meiliSwiper/index.wxss";

.common-long-cut {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.common-image-box {
    width: 100%;
    height: 100%;
}

.recommendShop-shop {
    width: 100%;
    padding: 0 0 0 32rpx;
    background-color: #fff;
}

.recommendShop-shop-item {
    width: 100%;
    border-bottom: 1rpx solid #e4e4e4;
}

.recommendShop-shop-item-end {
    border-bottom: none;
}

.recommendShop-shop-info {
    position: relative;
    width: 100%;
    height: 108rpx;
    overflow: hidden;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.recommendShop-shop-info-logo {
    width: 32rpx;
    height: 32rpx;
    background-color: #f4f4f4;
    border-radius: 6rpx;
    overflow: hidden;
}

.recommendShop-shop-info-name {
    max-width: 300rpx;
    height: 52rpx;
    line-height: 52rpx;
    margin-left: 16rpx;
    font-size: 28rpx;
    font-weight: bold;
    color: #333333;
}

.recommendShop-shop-info-sale {
    max-width: 300rpx;
    height: 52rpx;
    line-height: 52rpx;
    margin-left: 16rpx;
    font-size: 24rpx;
    color: #999999;
}

.recommendShop-shop-info-btn {
    position: absolute;
    top: 28rpx;
    right: 32rpx;
    width: 136rpx;
    height: 52rpx;
    line-height: 52rpx;
    border-radius: 200rpx;
    background-image: linear-gradient(to right,#ff5777,#ff468f);
    font-size: 22rpx;
    text-align: center;
    color: #ffffff;
    overflow: hidden;
}

.recommendShop-jc-sb {
    justify-content: space-between;
}

.recommendShop-jc-fs {
    justify-content: flex-start;
}

.recommendShop-shop-goods {
    width: 686rpx;
    height: 188rpx;
    display: flex;
    overflow: hidden;
}

.recommendShop-shop-goods-item {
    width: 160rpx;
    height: 160rpx;
    background-color: #f4f4f4;
    border-radius: 6rpx;
    overflow: hidden;
}