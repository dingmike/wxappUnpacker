.ui-empty {
    background-color: #fff;
    margin-top: 20rpx;
}

.switch-order-wrap {
    background-color: #fff;
    padding-top: 17rpx;
    height: 90rpx;
    text-align: center;
    line-height: 90rpx;
}

.order-banner {
    width: 100%;
    text-align: center;
    font-size: 0;
}

.order-banner--image {
    width: 100%;
}

.tab {
    position: relative;
}

.wall {
    padding-top: 30rpx;
    position: relative;
}

.line {
    height: 1rpx;
    width: 270rpx;
    background-color: red;
    position: absolute;
    top: 43rpx;
    left: 178rpx;
}

.wall-guess-text {
    font-size: 30rpx;
    font-weight: 400;
    color: #ccc;
    text-align: center;
    height: 50rpx;
    line-height: 50rpx;
}

.guess-text {
    background: no-repeat url(https://s10.mogucdn.com/mlcdn/c45406/170915_6530046j028g23acf2499d90hl9c2_30x31.png);
    background-size: 32rpx;
    background-position: 8rpx;
    padding: 0 8rpx 0 45rpx;
    color: #777;
}

.isAjaxLoading {
    height: 40rpx;
    line-height: 40rpx;
    margin-top: 10rpx;
    font-size: 24rpx;
    color: #999;
    text-align: center;
}

.new-btn {
    box-sizing: border-box;
    height: 58rpx;
    width: 50%;
    border-radius: 57rpx;
    display: inline-block;
    color: #fff;
}

.old-btn {
    box-sizing: border-box;
    display: inline-block;
    height: 58rpx;
    color: #fff;
    width: 50%;
    border-radius: 57rpx;
}

.swtich-active {
    background-color: #fff;
    color: #666666;
}

.switch-list-wrap {
    height: 58rpx;
    box-sizing: content-box;
    line-height: 58rpx;
    background-color: #b5b5b5;
    border-radius: 57rpx;
    border: solid 2rpx #b5b5b5;
    width: 400rpx;
    margin: 0 auto;
    font-size: 24rpx;
}

.tip-clear {
    float: right;
    margin-right: 22rpx;
    height: 66rpx;
    line-height: 66rpx;
}

.order-tips {
    line-height: 33rpx;
    font-size: 24rpx;
    color: #ffffff;
    width: 662rpx;
    display: inline-block;
}

.rectangle-5 {
    padding: 20rpx 0 20rpx 16rpx;
    min-height: 106rpx;
    background-color: #666666;
}

.tab-wrap {
    color: #666;
    height: 90rpx;
    white-space: nowrap;
    background-color: #f8f8f8;
}

.tab-inner {
    width: 16.7%;
}

.tab-wrap .tab {
    box-sizing: border-box;
    margin: 0 16rpx;
    font-size: 30rpx;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
}

.tab-active {
    color: #ff5777!important;
    border-bottom: solid #ff5777 1px;
}

.order-list-wrap {
    background-color: rgb(239,239,239);
}

.tab-number {
    position: absolute;
    top: 10rpx;
    right: -15rpx;
    padding: 0 9rpx;
    font-size: 20rpx;
    color: #fff;
    height: 29rpx;
    min-width: 29rpx;
    line-height: 29rpx;
    text-align: center;
    border-radius: 200rpx;
    background-color: #ff5777;
}