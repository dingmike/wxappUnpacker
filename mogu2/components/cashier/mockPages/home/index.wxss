.cashier-home {
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    height: 100%;
}

.cashier-top {
    background-color: #FAFAFA;
}

.cashier-topbanner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 70rpx;
    line-height: 70rpx;
    background-color: #FFE5E8;
    color: #FF5777;
}

.cashier-topbanner-icon {
    width: 70rpx;
    font-size: 30rpx;
    text-align: center;
    transition: all 0.3s linear;
}

.cashier-notice {
    flex: 1;
    height: 100%;
    overflow: hidden;
}

.cashier-notice-scroll {
    display: inline-block;
    white-space: nowrap;
}

.cashier-notice-text {
    display: inline-block;
    -webkit-backface-visibility: hidden;
    white-space: nowrap;
    font-size: 24rpx;
    margin-right: 40rpx;
}

.cashier-methods {
    border-bottom: 1px solid #e5e5e5;
    background-color: #ffffff;
}

.cashier-method {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100rpx;
    line-height: 100rpx;
    padding-left: 30rpx;
    padding-right: 20rpx;
}

.cashier-method-0 {
    border-top: none;
}

.cashier-method-1 {
    border-top: 1px solid #e5e5e5;
}

.method-text {
    font-size: 30rpx;
}

.method-desc {
    font-size: 28rpx;
}

.cashier-method-view {
    display: flex;
    align-items: center;
}

.cashier-method-radio {
    transform: scale(0.8,0.8);
}

.font-gray-true {
    color: #999999;
}

.method-icon {
    margin-right: 20rpx;
    height: 40rpx;
    width: 40rpx;
}

.method-actimg {
    height: 40rpx;
    width: 100rpx;
    margin: 0 20rpx;
}

.cashier-staging {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100rpx;
    line-height: 100rpx;
    margin-left: 80rpx;
    padding-right: 40rpx;
    font-size: 28rpx;
    border-top: 1px solid #e5e5e5;
}

.cashier-staging-view {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-left: 15rpx;
}

.cashier-bottom {
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-top: 1px solid #e5e5e5;
    height: 138rpx;
    padding: 0 32rpx;
    background: #fff;
}

.cashier-amount>text:first-child {
    font-size: 30rpx;
    color: #FF4E71;
}

.cashier-amount>text:last-child {
    font-size: 48rpx;
    color: #FF4E71;
}

.cashier-hongbao {
    position: absolute;
    top: -35rpx;
    height: 40rpx;
    width: 210rpx;
    line-height: 40rpx;
    text-align: center;
    color: #fff;
    font-size: 24rpx;
    background: #FF4E71;
    border-radius: 4rpx;
}

.cashier-hongbao:after {
    content: '';
    position: absolute;
    bottom: -10rpx;
    width: 0;
    height: 0;
    left: 45%;
    border-left: 10rpx solid transparent;
    border-right: 10rpx solid transparent;
    border-top: 10rpx solid #FF4E71;
}

.cashier-submit {
    width: 320rpx;
    height: 98rpx;
    line-height: 98rpx;
    background: #FF4E71;
    border-radius: 8rpx;
    font-size: 42rpx;
    color: #fff;
    text-align: center;
}