page {
    background-color: #F7F7F7;
}

.area_box {
    background-color: #FFFFFF;
}

.slide-image {
    width: 100%;
    height: 100%;
}

.detail_images {
    width: 100%;
    height: 700rpx;
}

.detail_summary {
    padding: 50rpx 30rpx;
    margin-bottom: 20rpx;
    background-color: #FFFFFF;
}

.detail_title {
    font-size: 19px;
    color: #353535;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    line-height: 1.2;
    font-weight: 500;
}

.detail_image_area {
    font-size: 0;
}

.detail_summary_bd {
    margin-top: 30rpx;
    height: 44rpx;
    line-height: 44rpx;
    font-size: 0;
}

.detail_service {
    float: right;
    border-radius: 5px;
    width: 70px;
    height: 30px;
    background: #f1f1f1 url(http://mmbiz.qpic.cn/mmbiz/Q3auHgzwzM5wLlGTou7JL9srav0YnlGyibwxvL3TBOibj5CqNEmPiaAic3iaoiaDsrV40umHBQSlAT8rSyM0x8ECwVtg/0) no-repeat 10px 8px;
    background-size: 16px auto;
    box-sizing: border-box;
    padding: 0;
    padding-left: 31px;
    line-height: 30px;
    font-size: 13px;
    color: #5c5c5c;
    text-align: left;
}

.detail_service::after {
    border: none;
}

.detail_price {
    font-size: 21px;
    color: #FA7834;
    line-height: 44rpx;
    display: inline-block;
    vertical-align: bottom;
}

.detail_old_price {
    font-size: 14px;
    margin-left: 40rpx;
    color: #9A9A9A;
    text-decoration: line-through;
    line-height: 38rpx;
    display: inline-block;
    vertical-align: bottom;
}

.detail_bd {
    padding: 0 20rpx;
}

.detail_ft {
    margin-top: 40rpx;
}

.detail_extra_item {
    position: relative;
    font-size: 15px;
    margin-left: 20rpx;
    border-bottom: 1px solid #eaeaea;
}

.detail_extra_item:first-child {
    border-top: 1px solid #eaeaea;
}

.sku_area {
    visibility: hidden;
}

.sku_area.show {
    visibility: visible;
}

.sku_area_box {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #FFFFFF;
}

.sku_mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #000000;
    opacity: 0;
    transition: all 0.3s;
}

.sku_area.show .sku_mask {
    opacity: .5;
}

.sku_area_box {
    transform: translateY(100%);
    transition: all 0.3s;
}

.sku_area.show .sku_area_box {
    transform: translateY(0);
}

.goods_item {
    display: flex;
    padding: 30rpx 0;
    margin: 0 30rpx;
    box-sizing: border-box;
    border-bottom: 1rpx solid #ebebeb;
}

.goods_item_hd {
    margin-right: 20rpx;
    font-size: 0;
}

.goods_item_hd image {
    width: 120rpx;
    height: 120rpx;
    background-color: #fbfbfb;
}

.goods_item_bd {
    flex: 1;
    width: 0%;
}

.goods_item_title {
    font-size: 14px;
    color: #353535;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    line-height: 36rpx;
    margin-bottom: 10rpx;
}

.sku_group_item_title {
    margin-bottom: 20rpx;
}

.goods_item_price {
    font-size: 14px;
    color: #FA7834;
    line-height: 36rpx;
}

.sku_group_item {
    margin-bottom: 10rpx;
}

.sku_bd {
    margin: 0 30rpx;
    font-size: 14px;
}

.sku_group {
    padding-top: 30rpx;
    padding-bottom: 10rpx;
    border-bottom: 1rpx solid #ebebeb;
}

.sku_group_title {
    flex: 1;
}

.sku_choose_item {
    display: inline-block;
    border-radius: 2rpx;
    box-sizing: border-box;
    padding: 10rpx 18rpx;
    min-width: 100rpx;
    text-align: center;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    font-size: 13px;
    line-height: 28rpx;
    background-color: #F7F7F7;
}

.sku_choose_item.selected {
    background-color: #FA7834;
    color: #FFFFFF;
}

.sku_choose_item.disabled {
    color: #bbb;
}

.editor {
    display: inline-block;
}

.editor.disabled {
    color: #DDDDDD;
}

.editor_remove,.editor_add {
    width: 72rpx;
    height: 60rpx;
    line-height: 54rpx;
    text-align: center;
    font-size: 24px;
    color: #606060;
    background-color: #F7F7F7;
    vertical-align: top;
}

.editor_input {
    width: 74rpx;
    border-left: 3rpx solid #FFFFFF;
    border-right: 3rpx solid #FFFFFF;
    height: 60rpx;
    vertical-align: top;
    text-align: center;
    background-color: #F7F7F7;
    color: #606060;
}

.editor_remove {
    border-radius: 2rpx 0 0 2rpx;
}

.editor_add {
    border-radius: 0 2rpx 2rpx 0;
}

.sku_froup_count {
    padding: 20rpx 0;
    display: flex;
    align-items: center;
    justify-content: center;
}

.error_msg {
    margin-top: 10rpx;
    color: #ff5027;
}

.quantity_Limit {
    color: #999;
}

.sku_ft_comfirm {
    border: none;
    background-color: #FA7834;
    font-size: 16px;
    height: 100rpx;
    color: #FFFFFF;
    border-radius: 0;
    line-height: 100rpx;
}

.sku_ft_comfirm[disabled] {
    background-color: #F7F7F7;
    border: none;
    font-size: 16px;
    height: 100rpx;
    color: #aaa;
    border-radius: 0;
    line-height: 100rpx;
}

.sku_ft_comfirm::after {
    display: none;
}

.table_wrp {
    padding: 0 30rpx;
    font-size: 14px;
}

.tr {
    display: flex;
    height: 40rpx;
    margin-bottom: 30rpx;
}

.table .tr:last-child {
    margin-bottom: 0;
}

.tr .td:last-child {
    text-align: right;
}

.detail_box_bd {
    margin-bottom: 50rpx;
}

.empty {
    font-size: 14px;
    padding: 20rpx;
}

.td_value {
    flex: 1;
}

.detail_static_image {
    width: 100%;
}

.detail_static_desc {
    font-size: 14px;
    line-height: 1.2;
    padding: 10px;
}

.parameter_box {
    margin-bottom: 20rpx;
    overflow: hidden;
}

.detail_box_title {
    padding: 50rpx 30rpx 40rpx 50rpx;
    position: relative;
    font-size: 16px;
    line-height: 36rpx;
    font-weight: 500;
}

.detail_box_title::before {
    content: '';
    display: block;
    position: absolute;
    width: 2px;
    height: 14px;
    background-color: #353535;
    left: 30rpx;
    bottom: 44rpx;
}

.detail_box_ft {
    margin: 0 30rpx;
    border-top: 1rpx solid #EEEEEE;
}

.detail_extra_link {
    font-size: 14px;
    position: relative;
    padding: 24rpx 30rpx;
    margin: 0 -30rpx;
}

.detail_extra_link .icon_arrow {
    top: 32rpx;
    right: 36rpx;
}

.wx_body {
    padding-bottom: 98rpx;
}

.wx_footer {
    position: fixed;
    display: flex;
    height: 100rpx;
    background-color: #FFFFFF;
    bottom: 0;
    left: 0;
    right: 0;
}

.wx_footer .footer_item.service_btn,.wx_footer .footer_item.shoppingcar_btn {
    width: 100rpx;
    font-size: 0;
    border-right: 1rpx solid #EFEFEF;
    border-top: 1rpx solid #EFEFEF;
}

.wx_footer .footer_item {
    border-width: 0;
    margin: 0;
    padding: 0;
    border-radius: 0;
}

.footer_item image {
    width: 54rpx;
    height: 54rpx;
    margin-top: 22rpx;
}

.footer_item.shoppingcar_btn.active {
    position: relative;
}

.footer_item.shoppingcar_btn.active .shoppingcar_count {
    display: block;
}

.footer_item.shoppingcar_btn .shoppingcar_count {
    min-width: 30rpx;
    height: 30rpx;
    position: absolute;
    top: 18rpx;
    right: 8rpx;
    background-color: #FF3E3E;
    font-size: 22rpx;
    color: #FFFFFF;
    line-height: 30rpx;
    border-radius: 15rpx;
    padding: 0 .3em;
    box-sizing: border-box;
    display: none;
    text-align: center;
}

.wx_footer .footer_item.add_btn {
    border-top: 1rpx solid #EFEFEF;
}

.add_btn,.buy_btn {
    flex: 1;
    font-size: 16px;
    line-height: 100rpx;
}

.wx_footer .footer_item.buy_btn {
    background-color: #FA7834;
    color: #FFFFFF;
    border-top: 1rpx solid #FA7834;
}

.empty_area {
    text-align: center;
    color: #9A9A9A;
    padding: 70rpx 0 110rpx;
    font-size: 14px;
}