@import "../mask/index.wxss";

.game-pop-bg {
    z-index: 101;
    position: fixed;
    width: 84%;
    max-height: 714rpx;
    height: 714rpx;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    -webkit-transform: translate(-50%,-50%);
    padding-top: 96rpx;
}

.game-pop-close {
    display: block;
    position: absolute;
    width: 76rpx;
    height: 76rpx;
    position: absolute;
    z-index: 3;
    right: 11rpx;
    top: 10rpx;
}

.content-wrapper {
    width: 88.25%;
    margin: 0 auto;
    overflow: hidden;
    text-align: center;
    height: 618rpx;
    position: relative;
}

.game-top-logo {
    margin: 0 auto;
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.game-top-title,.game-top-desc,.game-bottom-title,.game-bottom-desc {
    width: 100%;
    margin: 0 auto;
    line-height: 1.4;
}

.game-top-title {
    font-size: 40rpx;
    color: #fff;
    font-weight: bold;
}

.game-top-desc {
    font-size: 30rpx;
    color: #fff;
    margin-top: 5rpx;
}

.game-top-title,.game-top-desc,.game-bottom-title,.game-bottom-desc,.good-name {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.game-bottom {
    position: absolute;
    bottom: 205rpx;
    width: 100%;
    text-align: center;
    font-weight: 200;
    color: #fff;
    font-size: 22rpx;
}

.game-content {
    position: absolute;
    top: 98rpx;
    left: 0;
    width: 100%;
    height: 244rpx;
    text-align: center;
    padding-top: 16rpx;
    color: #333;
}

.white .game-content {
    color: #fff;
}

.good-img {
    width: 210rpx;
    height: 210rpx;
    margin: 0 auto;
    overflow: hidden;
}

.good-name {
    margin: 23rpx auto 0;
    font-size: 28rpx;
    color: #940020;
    font-weight: 300;
    width: 85%;
}

.good-price {
    color: #fff;
    font-size: 48rpx;
    line-height: 48rpx;
}

.good-price del {
    font-size: 36rpx;
    margin-left: 12rpx;
    font-weight: 300;
}

.good-price .origin {
    font-weight: bold;
}

.cut-price {
    line-height: 1.4;
    font-size: 126rpx;
    font-weight: bold;
}

.cut-price span {
    vertical-align: top;
    display: inline-block;
}

.cut-price .cny {
    font-size: 37rpx;
    font-family: 'Yahei';
    margin-top: 40rpx;
}

.limit-price {
    line-height: 1.4;
    font-size: 28rpx;
    margin-top: -22rpx;
    margin-left: 18rpx;
    font-weight: 300;
}

.detail {
    font-size: 28rpx;
    color: #fff;
}

.game-left-btn,.game-right-btn,.game-bottom-btn {
    line-height: 90rpx;
    text-align: center;
    font-size: 32rpx;
    color: #fff;
    border-radius: 44rpx;
}

.game-left-btn,.game-right-btn {
    width: 224rpx;
    height: 90rpx;
    position: absolute;
    bottom: 103rpx;
}

.game-left-btn {
    left: 50rpx;
}

.game-right-btn {
    right: 45rpx;
}

.game-bottom-btn {
    position: absolute;
    bottom: 88rpx;
    right: 130rpx;
    width: 296rpx;
    height: 90rpx;
}

.welfareItem .game-content,.itemGift .game-content,.goodsGift .game-content {
    height: auto;
    top: 78rpx;
}

.movieTicket .game-top-desc {
    font-weight: lighter;
}

.game-pop-share {
    padding-top: 30rpx;
}

.game-pop-share .game-top-title {
    font-size: 36rpx;
}

.game-pop-share .game-content {
    top: 215rpx;
}

.game-pop-share .game-bottom-btn {
    bottom: 0;
}

.game-share-user {
    color: #fff555;
    max-width: 250rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}