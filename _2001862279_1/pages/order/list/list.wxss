.wx_page {
    font-size: 14px;
}

.page_content {
    padding-top: 44px;
}

.list_nav_area {
    font-size: 14px;
    display: flex;
    color: #9A9A9A;
    background-color: #FFFFFF;
    border-top: 1rpx solid #dedede;
    border-bottom: 1rpx solid #dedede;
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 1;
}

.list_nav {
    flex: 1;
    text-align: center;
    height: 42px;
}

.list_nav.highlight .list_nav_inner {
    border-bottom: 3px solid #353535;
    color: #353535;
}

.list_nav_inner {
    display: inline-block;
    padding: 0 30rpx;
    box-sizing: border-box;
    height: 42px;
    line-height: 42px;
}

.goods_item {
    padding-left: 30rpx;
    display: flex;
    background-color: #FFFFFF;
}

.goods_cover {
    font-size: 0;
    padding: 20rpx 0;
}

.goods_cover_img {
    width: 150rpx;
    height: 150rpx;
    margin-right: 25rpx;
}

.goods_info {
    font-size: 14px;
    line-height: 36rpx;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #EEEEEE;
    padding-right: 20rpx;
    flex: 1;
}

.goods_list .goods_item:last-child .goods_info {
    border-bottom: none;
}

.goods_title {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.goods_description {
    margin-top: 6rpx;
    color: #9A9A9A;
}

.goods_description_item {
    margin-right: 6rpx;
}

.goods_cost {
    margin-top: 10rpx;
}

.goods_price {
    color: #FA7834;
    margin-right: 20rpx;
}

.goods_num {
    color: #9A9A9A;
}

.order_group {
    background-color: #FFFFFF;
    margin-bottom: 20rpx;
}

.page_content .order_group:last-child {
    margin-bottom: 0;
}

.order_group_ft {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: 30rpx;
    border-top: 1rpx solid #EEEEEE;
    padding-right: 30rpx;
}

.order_group_total {
    flex: 1;
    text-align: right;
    line-height: 40rpx;
    padding: 24rpx 0;
}

.order_group_label {
    color: #9A9A9A;
}

.order_group_opr {
    line-height: 1;
    padding: 10rpx;
    border-radius: 6rpx;
    border: 1rpx solid #FA7834;
    color: #FA7834;
}

.empty_box {
    color: #9A9A9A;
    text-align: center;
    padding-top: 60%;
}

.list_extra_area .tips_area {
    font-size: 14px;
    text-align: center;
    color: #D8D8D8;
    background-color: #F7F7F7;
    height: 100rpx;
    line-height: 100rpx;
}

.list_extra_area .tips_area.no_more {
    position: relative;
}

.list_extra_area .tips_area.no_more .tips_area_inner {
    display: inline-block;
    padding: 0 30rpx;
    background-color: #F7F7F7;
    position: relative;
}

.list_extra_area .tips_area.no_more::before {
    content: "";
    height: 1px;
    border-bottom: 1rpx solid #D8D8D8;
    display: block;
    width: 260rpx;
    position: absolute;
    top: 46rpx;
    left: 50%;
    transform: translateX(-50%);
}

.list_extra_area .tips_area.loading image {
    width: 28rpx;
    height: 28rpx;
    vertical-align: middle;
    margin-top: -6rpx;
}