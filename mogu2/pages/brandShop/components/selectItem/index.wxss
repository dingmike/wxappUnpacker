@import "../../../../components/heading/index.wxss";

.select-item-content-box {
    overflow: hidden;
}

.select-item-content {
    width: 718rpx;
    height: 284rpx;
    margin: 0 auto 16rpx auto;
    overflow: hidden;
    display: flex;
    font-family: PingFangSC;
}

.select-item-image-box {
    height: 284rpx;
    width: 398rpx;
    background-color: #ffffff;
    border-left: solid 1px #e5e5e5;
    border-top: solid 1px #e5e5e5;
    border-bottom: solid 1px #e5e5e5;
    overflow: hidden;
    position: relative;
}

.select-item-image {
    display: block;
    height: 284rpx;
    width: 284rpx;
    margin: 0 auto;
}

.select-item-discount {
    padding: 0 10rpx;
    border: solid 1rpx #9a0000;
    position: absolute;
    top: 14rpx;
    left: 18rpx;
    font-size: 18rpx;
    color: #9a0000;
    text-align: center;
    max-width: 200rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.select-item-info {
    height: 284rpx;
    width: 320rpx;
    background-color: #efefef;
    padding: 0 24rpx;
    overflow: hidden;
}

.select-item-info-title {
    width: 100%;
    height: 36rpx;
    line-height: 36rpx;
    font-size: 26rpx;
    font-weight: 500;
    color: #363636;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin: 26rpx 0 0 0;
}

.select-item-info-tag {
    width: 100%;
    height: 30rpx;
    line-height: 30rpx;
    overflow: hidden;
    margin: 10rpx 0 0 0;
}

.select-item-info-tag-item {
    float: left;
    padding: 0 8rpx;
    margin: 0 10rpx 0 0;
    height: 30rpx;
    line-height: 28rpx;
    border-radius: 80rpx;
    border: solid 1rpx #666666;
    font-size: 16rpx;
    color: #666666;
}

.select-item-info-line {
    margin: 10rpx 0 0 0;
    width: 100%;
    height: 1rpx;
    background: #a8a8a8;
}

.select-item-info-price {
    height: 34rpx;
    width: 100%;
    margin: 58rpx 0 0 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    display: flex;
}

.select-item-info-price-now {
    max-width: 100%;
    height: 34rpx;
    line-height: 34rpx;
    font-size: 24rpx;
    font-weight: 500;
    color: #770000;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    flex-shrink: 0;
}

.select-item-info-price-now-1 {
    color: #71A73A;
}

.select-item-info-price-before {
    max-width: 100%;
    height: 100%;
    line-height: 34rpx;
    font-size: 20rpx;
    font-weight: 300;
    color: #707070;
    text-decoration: line-through;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin: 0 0 0 8rpx;
}

.select-item-info-control {
    height: 44rpx;
    width: 100%;
    margin: 6rpx 0 0 0;
    border-radius: 3px;
    border: solid 1px #770000;
    display: flex;
    overflow: hidden;
}

.select-item-info-control-1 {
    border-color: #71A73A;
}

.control-tip {
    flex: 1;
    height: 42rpx;
    line-height: 42rpx;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.control-tip-icon {
    font-size: 18rpx;
}

.select-item-info-control-left {
    font-size: 20rpx;
    font-weight: 300;
    color: #770000;
}

.control-left-status1 {
    color: #71A73A;
}

.select-item-info-control-right {
    font-size: 22rpx;
    color: #ffffff;
    background: #770000;
}

.control-right-status1 {
    background: #71A73A;
}