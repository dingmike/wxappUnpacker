@import "../heading/index.wxss";

.clearfix:after {
    display: block;
    content: '';
    clear: both;
    visibility: hidden;
}

.activeEntry-box {
    width: 100%;
    background-size: 100% auto;
    background-position: top center;
    background-repeat: no-repeat;
}

.activeEntry-list {
    width: 100%;
    height: auto;
}

.activeEntry-form {
    display: block;
    width: 100%;
    height: auto;
}

.activeEntry-form-button {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    border: 0 solid transparent;
    background: none;
    padding: 0;
    margin: 0;
    overflow: hidden;
}

.activeEntry-form-button::after {
    display: none;
}

.activeEntry-item {
    position: relative;
    overflow: hidden;
}

.activeEntry-item-float {
    float: left;
}

.activeEntry-item-image-box {
    overflow: hidden;
}

.activeEntry-item-image {
    width: 100%;
    height: 100%;
}

.activeEntry-item-title,.activeEntry-item-description {
    position: absolute;
}

.activeEntry-item-title {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.activeEntry-item-description {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}