@-webkit-keyframes rotate {
    0% {
        transform: rotate(0);
    }

    100% {
        transform: rotate(360deg);
    }
}

@keyframes rotate {
    0% {
        transform: rotate(0);
    }

    100% {
        transform: rotate(360deg);
    }
}

.loading-overlay {
    position: fixed;
    display: flex;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    align-items: center;
    align-content: center;
    z-index: 1000;
}

.loading {
    position: relative;
    margin: 0 auto;
    pointer-events: auto;
    background-image: url(https://s10.mogucdn.com/mlcdn/c45406/170607_5241335cb37ka3ab7781ddh504ggh_200x200.png);
}

.loading-slip {
    background-image: url(http://s10.mogucdn.com/p1/160715/upload_ifrgmmzwmyydknldhezdambqmeyde_200x200.png);
    animation: rotate 1050ms infinite;
}

.loading,.loading-slip {
    width: 200rpx;
    height: 200rpx;
    background-repeat: no-repeat;
    background-size: cover;
}