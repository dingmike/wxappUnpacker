.cashier-message {
    height: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-direction: column;
}

.cashier-verification {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 116rpx;
    padding-left: 23rpx;
    background: #fff;
    font-size: 28rpx;
}

.cashier-phone {
    color: #666666;
    width: 188rpx;
}

.cashier-verification-prompt {
    width: 330rpx;
    color: #999999;
    border-right: 1px solid #DADADA;
}

.cashier-verification-num {
    width: 300rpx;
    color: #333333;
}

.cashier-verification-send {
    color: #333333;
    width: 200rpx;
    height: 116rpx;
    line-height: 116rpx;
    text-align: center;
}

.cashier-protocol {
    font-size: 24rpx;
    margin-bottom: 15rpx;
}

.cashier-protocol-radio {
    position: relative;
    bottom: 2rpx;
    left: 10rpx;
    transform: scale(0.6,0.6);
}

.cashier-protocol-text {
    color: #999999;
}

.cashier-protocol-title {
    color: #FF6B8A;
}

.cashier-keyboard {
    background: #fff;
}

.cashier-keyboard-top {
    height: 60rpx;
    line-height: 60rpx;
    font-size: 24rpx;
    text-align: center;
    color: #398FC3;
    background: #f8f8f8;
}

.cashier-keyboard-num {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    height: 400rpx;
}

.cashier-keyboard-num-view {
    width: 250rpx;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 48rpx;
    text-align: center;
    border-right: 1px solid #e5e5e5;
    border-bottom: 1px solid #e5e5e5;
}

.cashier-keyboard-num- {
    background: #d1d5db;
}

.cashier-keyboard-num-x {
    background: #d1d5db;
    display: flex;
    justify-content: center;
    align-items: center;
}

.cashier-keyboard-num-x-1 {
    position: relative;
    left: 2rpx;
    width: 0;
    border-bottom: 16rpx solid transparent;
    border-top: 15rpx solid transparent;
    border-right: 15rpx solid #000;
}

.cashier-keyboard-num-x-2 {
    position: relative;
    height: 30rpx;
    line-height: 26rpx;
    width: 30rpx;
    background: #000;
    border-radius: 4rpx;
    color: #fff;
    font-size: 30rpx;
}

.protocol-text {
    position: fixed;
    left: 10%;
    top: 50%;
    height: 1000rpx;
    transform: translateY(-500rpx);
    width: 80%;
    z-index: 102;
}

.protocol-scroll {
    width: 100%;
    height: 100%;
}

.protocol-close {
    position: absolute;
    right: -1rpx;
    top: 0rpx;
    height: 60rpx;
    line-height: 45rpx;
    width: 60rpx;
    border-bottom-left-radius: 60rpx;
    background: #000;
    color: #fff;
    font-size: 40rpx;
    font-weight: bold;
    text-align: center;
}

.protocol-scroll-img {
    display: block;
    width: 600rpx;
    height: 2148rpx;
}