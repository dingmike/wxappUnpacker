.wx_page {
    font-size: 14px;
}

.area_box {
    margin-top: 20rpx;
    background-color: #FFFFFF;
}

.cell_box {
    margin-left: 30rpx;
    padding: 24rpx 0;
    padding-right: 30rpx;
    border-bottom: 1rpx solid #EEEEEE;
    line-height: 44rpx;
}

.cell_box:last-child {
    border-bottom: none;
}

.express_info_list {
    color: #9A9A9A;
    padding: 50rpx 30rpx 50rpx 80rpx;
}

.express_info_desc {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    line-height: 36rpx;
    margin-bottom: 10rpx;
}

.express_info_item {
    margin-bottom: 60rpx;
    position: relative;
}

.express_info_item:first-child {
    color: #FA7834;
}

.express_info_item:last-child {
    margin-bottom: 0;
}

.express_info_item::after {
    content: '';
    display: block;
    width: 12rpx;
    height: 12rpx;
    position: absolute;
    left: -46rpx;
    background-color: #9A9A9A;
    border-radius: 100%;
    top: 18rpx;
    margin-top: -6rpx;
}

.express_info_item::before {
    content: '';
    display: block;
    width: 1rpx;
    background-color: #9A9A9A;
    position: absolute;
    height: 100%;
    padding-bottom: 60rpx;
    left: -40rpx;
    top: 18rpx;
    margin-top: -6rpx;
}

.express_info_item:last-child::before {
    display: none;
}

.express_info_item:first-child::after {
    background-color: #FA7834;
    width: 18rpx;
    height: 18rpx;
    left: -48rpx;
    margin-top: -9rpx;
}