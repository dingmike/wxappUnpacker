<template name="icon">
    <button class="bottombar__btn bottombar__icon-btn flex f-ff-cn f-ai-c f-jc-c" data-name="{{name}}" formType="submit" hoverClass="none" style="{{bgColorStyle}}{{textColorStyle}}">
        <i class="bottombar__icon-btn--icon m-icon m-icon-{{iconName}}" style="{{iconStyle}}"></i>
        <view class="bottombar__icon-btn--text">{{text}}</view>
        <template is="popup" data="{{...popup,isPopUpShow:isPopUpShow}}"></template>
    </button>
</template>
<import src="../popup/index.wxml"></import>
