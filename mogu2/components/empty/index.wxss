.ui-empty {
    position: relative;
    display: block;
    width: 100%;
    height: 0;
    padding-bottom: 100%;
    overflow: hidden;
}

.ui-empty-box {
    position: absolute;
    display: flex;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.ui-empty-btn {
    min-width: 228rpx;
    height: 66rpx;
    margin-top: 20rpx;
    padding: 0 30rpx;
    background-color: #ff5777;
    border: 0 none;
    border-radius: 2px;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
    overflow: hidden;
    line-height: 66rpx;
}

.ui-empty-btn:active,.ui-empty-btn-active {
    background-color: #f5456e;
}

.ui-empty-image {
    width: 514rpx;
    height: 260rpx;
    background: transparent no-repeat;
    background-size: cover;
}

.ui-empty-text {
    margin-top: 30rpx;
    color: #666;
    font-size: 32rpx;
}

.ui-empty-tip {
    margin-top: 20rpx;
    color: #666;
    font-size: 24rpx;
}