page {
    height: 100%;
}

.page-container {
    background-color: #f2f2f2;
    display: -webkit-box;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    height: 100%;
}

.loading {
    background-color: #f2f2f2;
}

.flex-wrp {
    display: -webkit-box;
    display: flex;
}

.flex-tab {
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-flow: row nowrap;
    justify-content: space-around;
    -webkit-box-align: stretch;
    align-items: stretch;
}

.flex-item {
    -webkit-box-flex: 1;
    flex-grow: 1;
    text-align: center;
    margin: 0 80rpx;
}

.top-tip {
    height: 60rpx;
    width: 100%;
    line-height: 60rpx;
    position: fixed;
    top: 90rpx;
    font-size: 22rpx;
    background-color: #ffebca;
    z-index: 9999;
    color: #7f552f;
    padding-left: 20rpx;
}

.top-tab {
    width: 750rpx;
    height: 90rpx;
    background: #fff;
    color: #666;
    font-size: 26rpx;
    font-weight: 400;
    line-height: 100rpx;
    margin: 0 0 4rpx 0;
    position: fixed;
    top: 0;
    z-index: 9999;
}

.toptab.active {
    color: #FF1928;
    font-weight: 900;
    border-bottom: solid 4rpx #FF1928;
}

.coupon {
    background-color: #F2F2F2;
}

.coupon-container {
    width: 100%;
    padding-bottom: 30rpx;
    padding-top: 160rpx;
}

.coupon-item {
    position: relative;
    margin: 20rpx 20rpx 30rpx 20rpx;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    background-color: white;
    overflow: hidden;
}

.coupon-item .main-coupon-item {
    padding: 0 18rpx;
}

.coupon-item .desc-to {
    font-size: 24rpx;
}

.coupon-item .desc-price {
    padding-left: 10rpx;
}

.coupon-item .desc_limit {
    padding: 25rpx 0;
    margin: 0 20rpx;
    text-align: center;
    border-bottom: 1px dotted #ccc;
    display: -webkit-box;
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
    -webkit-box-align: center;
    align-items: center;
    position: relative;
}

.coupon-item .hole-left {
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    background-color: #f2f2f2;
    position: absolute;
    bottom: -20rpx;
    left: -60rpx;
}

.coupon-item .hole-right {
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    background-color: #f2f2f2;
    position: absolute;
    bottom: -20rpx;
    right: -60rpx;
}

.coupon-item .desc-others {
    text-align: left;
    font-size: 30rpx;
    line-height: 40rpx;
    width: 40%;
    display: -webkit-box;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
}

.coupon-item .desc-rmb {
    font-size: 100rpx;
    display: inline-block;
}

.coupon-item .desc_limit_status {
    background-color: #e0e0e0;
    font-size: 24rpx;
    line-height: 28rpx;
    padding: 4rpx 20rpx;
    color: #868686;
}

.coupon-item .desc_limit_money {
    display: block;
    font-size: 24rpx;
    line-height: 28rpx;
    margin-top: 15rpx;
    color: #868686;
}

.coupon-item .desc_limit_time {
    font-size: 24rpx;
    color: #B4B4B4;
}

.coupon-item .desc-tag {
    position: absolute;
    top: 24rpx;
    right: -60rpx;
    width: 220rpx;
    background-color: #a6a6a6;
    font-size: 24rpx;
    text-align: center;
    transform: rotatez(45deg);
}

.coupon-item .desc-tag view {
    margin: 4rpx 0;
    border-top: 2rpx solid #ececec;
    border-bottom: 2rpx solid #ececec;
}

.coupon-item .desc-tag text {
    color: #ececec;
}

.coupon-item .desc-tag-selected {
    background-color: #fdb914;
}

.select-tag {
    background-color: #FF1928;
    width: 80rpx;
    height: 80rpx;
    display: -webkit-box;
    display: flex;
    -webkit-box-pack: center;
    justify-content: center;
    transform: matrix(.71,.71,-0.71,.71,0,0);
    -webkit-box-align: end;
    align-items: flex-end;
    position: absolute;
    top: -40rpx;
    right: -40rpx;
}

.select-tag .check-mark {
    width: 6rpx;
    height: 16rpx;
    border-width: 0 4rpx 4rpx 0;
    border-style: solid;
    border-color: #fff;
    margin: 8rpx;
}

.coupon-item-not-use {
    border-top: 20rpx solid #e0e0e0;
}

.coupon-item-not-use .desc-to {
    color: #B4B4B4;
}

.coupon-item-not-use .desc-rmb {
    color: #868686;
}

.coupon-item-not-use .currency-unit {
    color: #868686;
}

.coupon-item-unused {
    border-top: 20rpx solid #FF1928;
}

.coupon-item-unused .desc-to {
    color: #B4B4B4;
}

.coupon-item-unused .desc-rmb {
    color: #FF1928;
}

.coupon-item-unused .currency-unit {
    color: #FF1928;
}

.coupon-item-expired {
    border-top: 20rpx solid #e0e0e0;
}

.coupon-item-expired .desc-to {
    color: #B4B4B4;
}

.coupon-item-expired .desc-rmb {
    color: #868686;
}

.coupon-item-expired .currency-unit {
    color: #868686;
}

.coupon-bottom {
    display: -webkit-box;
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
    padding: 20rpx;
}

.empty-text {
    margin: 10rpx 10rpx 0 10rpx;
    padding-top: 200rpx;
    border-radius: 5rpx;
    text-align: center;
    font-size: 28rpx;
    color: #545454;
    letter-spacing: 2rpx;
}