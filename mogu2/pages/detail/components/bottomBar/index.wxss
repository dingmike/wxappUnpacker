@import "popup/index.wxss";

@import "icon/index.wxss";

@import "live/index.wxss";

@import "button/index.wxss";

@import "../../../../components/skudialog/index.wxss";

.cpmponent__bottombar {
    height: 100rpx;
    width: 750rpx;
    position: fixed;
    bottom: 0;
    left: 50%;
    transform: translate3d(-50%,0,0);
    background: #ffffff;
    z-index: 1;
}

.cpmponent__bottombar--border {
    border-top: 1rpx solid #E5E5E5;
}

.cpmponent__bottombar--occupying {
    height: 100rpx;
    width: 750rpx;
}

.cpmponent__bottombar--tips {
    width: 750rpx;
    height: 56rpx;
    color: #ffffff;
    font-size: 24rpx;
    text-align: center;
    line-height: 56rpx;
    background: rgba(51,51,51,0.6);
    position: fixed;
    bottom: 100rpx;
    left: 50%;
    transform: translate3d(-50%,0,0);
    z-index: 1;
}

.cpmponent__bottombar .bottombar__icon {
    height: 100%;
    flex: none;
}

.cpmponent__bottombar .bottombar__live {
    height: 100%;
    flex: none;
}

.cpmponent__bottombar .bottombar__button {
    width: 100%;
    height: 100%;
}

.cpmponent__bottombar .bottombar__btn {
    height: 100%;
}