@import "../../../../../../components/skudialog/index.wxss";

@import "../sliderVerify/index.wxss";

.seckill-footbar .m-icon-star-active {
    color: #FB4747!important;
}

.seckill-footbar .occupying {
    height: 100rpx;
    width: 750rpx;
}

.seckill-footbar .tips {
    width: 750rpx;
    height: 56rpx;
    color: #ffffff;
    font-size: 24rpx;
    text-align: center;
    background: rgba(51,51,51,0.6);
    position: fixed;
    bottom: 100rpx;
    left: 50%;
    transform: translate3d(-50%,0,0);
    z-index: 1;
}

.seckill-footbar .footbar {
    height: 100rpx;
    width: 750rpx;
    position: fixed;
    bottom: 0;
    left: 50%;
    transform: translate3d(-50%,0,0);
    background: #ffffff;
    z-index: 1;
}

.seckill-footbar .footbar-content {
    width: 100%;
    height: 100%;
}

.seckill-footbar .footbar-content--btn {
    flex: 1;
    width: 100%;
}

.seckill-footbar .footbar-content--form {
    display: block;
    flex: 1;
    width: 100%;
}

.seckill-footbar .buy {
    width: 100%;
    flex: 1;
    font-size: 28rpx;
    color: #ffffff;
    background: linear-gradient(to left top,#fb4747,#ff8c5e);
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
}

.seckill-footbar .buy.disabled {
    background: #d2d2d2;
}

.seckill-footbar .seckill-countdown {
    font-size: 24rpx;
    color: #fff;
    margin-left: 10rpx;
}