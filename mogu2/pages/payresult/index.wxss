@import "../../components/toast/index.wxss";

@import "../../components/loading/index.wxss";

@import "../../components/wall/index.wxss";

@import "components/totalMount/index.wxss";

@import "components/scratch/index.wxss";

.states-discount {
    color: #aaa;
    line-height: 33rpx;
    margin: 12rpx 0 25rpx 0;
    font-size: 24rpx;
    font-weight: 400;
}

.totalMount-wrap {
    margin: 0 20rpx 20rpx 20rpx;
}

.banner {
    position: relative;
    width: 100%;
}

.banner-img {
    width: 750rpx;
}

.pay-result {
    padding-top: 8rpx;
    background: #fff;
}

.states {
    text-align: center;
}

.states-bg {
    margin-bottom: 13rpx;
    min-height: 187rpx;
    padding-top: 28rpx;
    background: url('https://s10.mogucdn.com/mlcdn/c45406/170824_282cjd0e0ha45b827i27je67c04dg_590x180.png') no-repeat center;
    text-align: center;
    background-size: 590rpx 180rpx;
    font-size: 0;
}

.states-title {
    line-height: 33rpx;
    margin-top: 12rpx;
    color: #ff5777;
    font-size: 24rpx;
}

.states-btns {
    width: 100%;
    font-size: 0;
    padding: 0 0 0 32rpx;
}

.button-order:after,.order-invite-button:after {
    content: none;
}

.button-order {
    flex: 1;
    width: 327rpx;
    height: 70rpx;
    line-height: 68rpx;
    font-size: 28rpx;
    background: #fff;
    color: #333;
    margin-right: 32rpx;
    border-radius: 4rpx;
    border: 1rpx solid #d2d2d2;
}

.states-security {
    line-height: 33rpx;
    margin-top: 30rpx;
    padding: 30rpx 46rpx 30rpx 32rpx;
    border-top: solid 1rpx #ececec;
    font-size: 24rpx;
    text-align: left;
    color: #999;
}

.states-text {
    margin-bottom: 9rpx;
}

.states-section {
    background: #fff;
    height: 66rpx;
    line-height: 33rpx;
}

.states-line {
    height: 16rpx;
    background-color: #efefef;
}

.order-shipInfo {
    line-height: 33rpx;
    padding: 30rpx 44rpx 31rpx 32rpx;
    border-bottom: solid 1rpx #ececec;
    font-size: 24rpx;
    color: #333;
}

.order-shipInfo-detail {
    color: #666;
    margin-top: 10rpx;
}

.order-list-wrap {
    padding-left: 32rpx;
    border-bottom: solid 1rpx #ececec;
}

.order-item-wrap {
    height: 184rpx;
    padding: 30rpx 32rpx 30rpx 0;
    border-bottom: solid 1rpx #eee;
    font-size: 24rpx;
}

.order-item-img {
    width: 112rpx;
    height: 112rpx;
    padding: 5rpx;
    flex-basis: 60rpx;
    border: solid 1rpx #e0e0e0;
}

.order-item-wrap:last-child {
    border: none;
}

.order-item-btn {
    flex-basis: 130rpx;
}

.order-item-title {
    width: 358rpx;
    height: 124rpx;
    margin: 0 54rpx 0 20rpx;
    font-size: 24rpx;
}

.order-item-content {
    height: 56rpx;
    line-height: 28rpx;
    margin: 4rpx 0 20rpx;
    overflow: hidden;
}

.order-item-price {
    line-height: 33rpx;
}

.order-invite-button {
    width: 130rpx;
    height: 50rpx;
    padding: 0;
    line-height: 48rpx;
    font-size: 24rpx;
    color: #ff5777;
    background-color: #fff;
    border: solid 1rpx #ff5777;
}

.order-item-imginfo {
    height: 124rpx;
    position: relative;
}

.order-item-tag {
    display: block;
    position: absolute;
    top: 1rpx;
    left: 1rpx;
    width: 48rpx;
    height: 24rpx;
    line-height: 25rpx;
    border-bottom-right-radius: 4rpx;
    background-color: #ff5777;
    color: #fff;
    text-align: center;
    font-size: 18rpx;
}

.order-show-more {
    text-align: center;
    color: #999;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 24rpx;
}

.m-r-10 {
    margin-left: 10rpx;
}

.recommend-header {
    height: 40rpx;
    margin: 32rpx 0 24rpx;
}

.recommend-line {
    width: 66rpx;
    height: 1rpx;
    background-color: #c5c5c5;
}

.recommend-diamond {
    width: 6rpx;
    height: 6rpx;
    background-color: #c5c5c5;
    transform: rotateZ(45deg);
}

.recommend-title {
    margin: 0 16rpx;
    color: #666;
    font-size: 28rpx;
}