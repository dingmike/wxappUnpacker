.product-list {
    width: 100%;
    padding: 30rpx 0;
}

.product-border {
    border-bottom: solid 1px #eee;
}

.shop-product {
    padding: 0 20rpx;
}

.item-shop-img image {
    width: 144rpx;
    height: 144rpx;
    border: solid 1rpx #eee;
}

.product-des {
    margin: 0 15rpx;
    position: relative;
}

.product-des--name {
    color: #333;
    margin-top: -2rpx;
    margin-bottom: 5rpx;
    line-height: 36rpx;
    height: 68rpx;
    font-size: 24rpx;
    font-weight: 400;
    line-clamp: 2;
    flex-orient: vertical;
    overflow: hidden;
}

.sku-item-wrap {
    margin-right: 10rpx;
    display: inline;
}

.refund-res--status {
    align-items: center;
    margin-right: 5rpx;
    color: #727272;
    height: 42rpx;
    font-size: 24rpx;
}

.refund-res-text {
}

.refund-res--icon {
    height: 26rpx;
    line-height: 26rpx;
    margin-right: 6rpx;
    display: inline-block;
    padding: 2rpx 5rpx;
    color: #fff;
    background-color: #f45238;
    font-size: 22rpx;
}

.product-price {
    text-align: right;
    line-height: 40rpx;
    font-size: 24rpx;
    color: #666;
}

.product-price--number {
    font-size: 24rpx;
    color: #999;
}

.product-price--origin {
    text-decoration: line-through;
    color: #999;
}

.product-des--sku {
    margin-bottom: 5rpx;
    font-size: 24rpx;
    color: #999;
}

.product-des--tag {
    display: inline-block;
    border-radius: 1rpx;
    margin-top: 4rpx;
    margin-right: 3rpx;
    padding: 0 7rpx;
    background-color: rgb(255,234,238);
    height: 28rpx;
    line-height: 29rpx;
    font-size: 20rpx;
    white-space: nowrap;
    color: #ff5777;
}