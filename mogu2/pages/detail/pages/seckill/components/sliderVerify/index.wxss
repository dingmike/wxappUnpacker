.sliderverify {
    position: fixed;
    top: 50%;
    left: 50%;
    z-index: 100;
    transform: translate(-50%,-50%);
}

.sliderverify-content {
    position: relative;
    width: 600rpx;
    height: 518rpx;
    border-radius: 6rpx;
    background: #fff;
    padding: 24rpx;
}

.sliderverify-content--jigsaw {
    position: relative;
    width: 552rpx;
    height: 272rpx;
}

.jigsaw-bg {
    width: 100%;
    height: 100%;
}

.jigsaw-mask {
    position: absolute;
    top: 158rpx;
    border: solid #fff 1rpx;
    background: rgba(0,0,0,0.54);
}

.jigsaw-slide {
    position: absolute;
    left: 0;
    top: 158rpx;
    border: solid #fff 1rpx;
    background-size: 552rpx 272rpx;
    background-repeat: no-repeat;
}

.sliderverify-content--text {
    font-size: 24rpx;
    color: #4a4a4a;
    text-align: center;
    line-height: 110rpx;
}

.text-fail {
    color: #FB4747;
}

.sliderverify-content--slider {
    width: 100%;
    height: 80rpx;
    background: #efefef;
    border-radius: 4rpx;
}

.sliderverify-close {
    position: absolute;
    top: -29rpx;
    right: -29rpx;
    color: #fff;
    width: 58rpx;
    height: 58rpx;
    background: #FB4747;
    border-radius: 50%;
}

.slider-bar {
    position: relative;
    height: 80rpx;
    background: #FFE3E8;
    border: solid 1rpx #FB4747;
    border-radius: 4rpx;
}

.slider-bar--btn {
    position: absolute;
    top: -1rpx;
    right: -1rpx;
    width: 92rpx;
    height: 80rpx;
    border-radius: 4rpx;
    background: #FB4747 url(https://s10.mogucdn.com/mlcdn/c45406/170914_6dl0ae56d724f9lj6le8c935egkgc_60x44.png) center center no-repeat;
    background-size: 60rpx auto;
}