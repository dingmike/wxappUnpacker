@import "../../__wuBaseWxss__/0.wxss";

.header_pic {
    width: 750rpx;
    height: 344rpx;
    background-image: url(https://wuhoucdn.oss-cn-hangzhou.aliyuncs.com/read_poem/img/text_gif.gif);
    background-size: 100% 428rpx;
}

.title {
    font-size: 30rpx;
    color: #7b7b79;
    height: 89rpx;
    line-height: 89rpx;
    text-align: center;
    border-bottom: 1rpx solid #e4dfd7;
}

.bgm_list {
    box-sizing: border-box;
    padding: 0 95rpx;
    height: 340rpx;
    overflow-x: scroll;
    margin-top: 50rpx;
}

.bgm_item {
    font-size: 30rpx;
    padding: 24rpx 36rpx 19rpx 12rpx;
    border-bottom: 1rpx solid #e4dfd7;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.bgm_item:first-child {
    padding-top: 0;
}

.bgm_item:last-child {
    border-bottom: none;
}

.bgm_name {
    font-size: 30rpx;
    margin-right: 29rpx;
    color: #585858;
    display: flex;
    align-items: center;
    width: 85%;
}

.bgm_name text {
    width: 80%;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.icon_select {
    height: 26rpx;
    width: 26rpx;
    margin-right: 29rpx;
    box-sizing: border-box;
}

.icon_border {
    border: 1rpx solid #4d4d4d;
    border-radius: 50%;
}

.icon_music {
    width: 30rpx;
    height: 37rpx;
}

.btn_wrap {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 80rpx;
}

.icon_rec {
    width: 39rpx;
    height: 37rpx;
    margin-right: 11rpx;
}

.icon_cloud {
    width: 44rpx;
    height: 33rpx;
    margin-right: 11rpx;
}

.btn_wrap {
    padding: 0 50rpx;
}

.upload_btn,.rec_btn {
    height: 80rpx;
    width: 253rpx;
    border: 2rpx solid #4d4d4d;
    color: #4d4d4d;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
    border-radius: 100rpx;
}

.upload_btn {
    width: 350rpx;
    margin-left: 30rpx;
}

.hint {
    font-size: 28rpx;
    margin: 20rpx 0;
    text-align: center;
}

.hint {
    margin-bottom: 100rpx;
}