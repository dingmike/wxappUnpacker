page {
    height: 100%;
    background-color: #f4f4f4;
    font-size: 24rpx;
    font-weight: 300;
}

.fixed {
    position: fixed;
    z-index: 100;
    top: 0;
}

.fixed-tab {
    top: 90rpx;
}

.search {
    width: 100%;
    background-color: #fff;
}

.search-con {
    width: 600rpx;
    height: 72rpx;
    margin: 12rpx 16rpx;
    line-height: 72rpx;
    background: #f7f7f7;
    color: #333;
    border-radius: 36rpx;
    text-align: center;
}

.search-con_icon,.search-con_clear {
    width: 80rpx;
    text-align: center;
}

.search-con_icon image {
    width: 48rpx;
    height: 48rpx;
    vertical-align: middle;
}

.search-con_clear label {
    display: block;
    width: 32rpx;
    height: 32rpx;
    margin: 0 auto;
    text-align: center;
    line-height: 28rpx;
    color: #fff;
    background-color: #d6d6d6;
    border-radius: 50%;
}

.search-con input {
    width: 440rpx;
    text-align: left;
    height: 72rpx;
    line-height: 72rpx;
}

.search-btn {
    width: 100rpx;
    height: 72rpx;
    line-height: 72rpx;
    text-align: center;
}

.history-head {
    padding: 30rpx;
    color: #999;
}

.history-head image {
    float: right;
    width: 26rpx;
    height: 32rpx;
    object-fit: contain;
}

.history-tips {
    padding: 0 30rpx 0 0;
}

.history-tips label {
    display: inline-block;
    height: 72rpx;
    line-height: 72rpx;
    border-radius: 36rpx;
    font-weight: 300;
    font-size: 28rpx;
    color: #000;
    background-color: #fff;
    padding: 0 40rpx;
    margin: 0 0 30rpx 18rpx;
}

.goods .item-container {
    display: -webkit-box;
    display: flex;
    flex-wrap: wrap;
    width: 100%;
    padding-bottom: 10rpx;
}

.goods .item {
    position: relative;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    width: 50%;
    background-color: white;
}

.goods .item-block {
    display: -webkit-box;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    height: 500rpx;
    margin-bottom: 20rpx;
}

.goods .item-block .head-img {
    width: 330rpx;
    height: 330rpx;
    position: relative;
    margin: auto;
    background: #f8f8f8 url(https://static.seecsee.com/images/h5/placehold.svg) 50% no-repeat;
}

.goods .item-block .head-img .item-tips {
    position: absolute;
    top: -12rpx;
    left: 18rpx;
    padding: 0 20rpx;
    height: 48rpx;
    line-height: 48rpx;
    font-weight: 600;
    text-align: center;
    background-color: #ff7070;
    color: #fff;
    font-size: 24rpx;
}

.goods .item-block .head-img .item-tips label {
    position: absolute;
    display: block;
    left: -10rpx;
    top: 0;
    width: 0;
    height: 0;
    border-top: 14rpx solid transparent;
    border-right: 12rpx solid #ff7070;
}

.goods .item-block .head-img .sold-out {
    position: absolute;
    top: 75rpx;
    left: 75rpx;
}

.goods .item-block .head-img .sold-out__con {
    display: inline-block;
    vertical-align: middle;
    width: 180rpx;
    height: 180rpx;
    border: 2rpx solid #fff;
    border-radius: 50%;
    background-color: rgba(0,0,0,0.5);
    text-align: center;
}

.goods .item-block .head-img .sold-out__con text {
    display: block;
    color: #fff;
}

.goods .item-block .head-img .sold-out__con .zh {
    font-size: 30rpx;
    line-height: 30rpx;
    margin-top: 64rpx;
}

.goods .item-block .head-img .sold-out__con .en {
    font-size: 20rpx;
}

.goods .item-block image {
    width: 330rpx;
    height: 330rpx;
}

.goods .item-block .name-line {
    font-size: 24rpx;
    line-height: 32rpx;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    height: 60rpx;
    color: #545454;
    margin: 0 20rpx;
}

.goods .item-block .price-view {
    display: -webkit-box;
    display: flex;
    -webkit-box-align: baseline;
    align-items: baseline;
    margin: 10rpx 20rpx 0 20rpx;
}

.goods .item-block .price-line,.goods .item-block .price-line-none {
    color: #ff3b30;
    font-weight: 600;
    font-size: 28rpx;
    text-align: center;
}

.goods .item-block .oriprice-line {
    color: #999;
    text-decoration: line-through;
    font-size: 20rpx;
    padding-left: 16rpx;
}

.goods .tab {
    width: 100%;
    height: 84rpx;
    background: #fff;
    border-top: 1px solid #f4f4f4;
    margin-bottom: 20rpx;
}

.goods .tab view {
    height: 100%;
    line-height: 84rpx;
    border-bottom: solid 4rpx transparent;
}

.goods .tab view.cur {
    color: #ff7070;
    font-weight: 600;
    border-bottom: solid 4rpx #ff7070;
}

.goods .tab .price {
    position: relative;
}

.goods .tab .price label {
    position: absolute;
    right: -30rpx;
    width: 0;
    height: 0;
    border-left: 10rpx solid transparent;
    border-bottom: 12rpx solid #000;
    border-right: 10rpx solid transparent;
    display: inline-block;
}

.goods .tab .price label.price-desc {
    bottom: 28rpx;
    transform: rotate(180deg);
}

.goods .tab .price label.price-asc {
    top: 28rpx;
}

.goods .tab .price.cur label {
    border-bottom-color: #ccc;
}

.goods .tab .price.cur label.price {
    border-bottom-color: #ff7070;
}

.goods .loading {
    padding: 20rpx 0;
    color: #666;
    text-align: center;
}

.goods .warn {
    margin-top: 320rpx;
    text-align: center;
}

.goods .warn view {
    margin-bottom: 24rpx;
}

.goods .warn image {
    width: 72rpx;
    height: 72rpx;
}