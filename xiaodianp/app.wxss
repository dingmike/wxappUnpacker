page {
    box-sizing: border-box;
}

.item-flex {
    display: -webkit-box;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
}

.item-center {
    align-self: center;
}

.item-bottom {
    align-self: flex-end;
}

.item-between {
    -webkit-box-pack: justify;
    justify-content: space-between;
}

.item-around {
    justify-content: space-around;
}

.item-column {
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
}

.flex-justify-around {
    display: -webkit-box;
    display: flex;
    justify-content: space-around;
    -webkit-box-align: center;
    align-items: center;
}

.flex-center-column {
    display: -webkit-box;
    display: flex;
    -webkit-box-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
}

.item-justify-center {
    -webkit-box-pack: center;
    justify-content: center;
}

.box-flex-1 {
    -webkit-box-flex: 1;
    flex: 1;
}

.text-ellipsis {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    width: 100%;
    display: block;
}

.text-ellipsis-double {
    text-overflow: ellipsis;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-break: break-all;
}

.offline-notice {
    margin: 10rpx 10rpx 0 10rpx;
    padding: 100rpx 0 40rpx 0;
    border-radius: 5rpx;
    text-align: center;
    font-size: 12px;
    color: #999;
}

.fix-ipx {
    padding-bottom: 68rpx;
}

