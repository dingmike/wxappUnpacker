page {
    font-family: -apple-system-font,"Helvetica Neue","Hiragino Sans GB","Microsoft YaHei",sans-serif;
}

.ui-flex {
    display: flex;
}

.ui-flex__item {
    flex: 1;
}

.ui-flex__item-center {
    justify-content: center;
    align-items: center;
}

.ui-radio {
    box-sizing: border-box;
    position: relative;
    display: inline-block;
    vertical-align: middle;
    width: 16px;
    height: 16px;
    border: 2px solid #D4D4D6;
    border-radius: 16px;
    margin-right: 10px;
}

.ui-radio_checked {
    border-color: #1A8CC2;
}

.ui-radio_checked:after {
    content: '';
    position: absolute;
    left: 50%;
    top: 50%;
    width: 8px;
    height: 8px;
    margin: -4px 0 0 -4px;
    background-color: #1A8CC2;
    border-radius: 8px;
}

.ui-button {
    box-sizing: border-box;
    width: 100%;
    height: 48px;
    line-height: 48px;
    text-align: center;
    font-size: 17px;
    color: #fff;
    background-color: #1A8CC2;
    border-radius: 6px;
    box-shadow: inset 0 0 2px #1A8CC2;
}

.ui-button_white {
    border: 1rpx solid #1A8CC2;
    color: #1A8CC2;
    background-color: #fff;
    box-shadow: none;
}

.ui-button_disabled {
    color: rgba(255,255,255,.3);
}

.ui-disabled {
    opacity: 0.3;
}

.ui-button_fix {
    box-sizing: border-box;
    display: inline-block;
    width: auto;
    height: 68rpx;
    line-height: 68rpx;
    padding: 0 10px;
    border-radius: 4px;
    font-size: 14px;
}

.listview {
    margin-bottom: 30rpx;
}

.listview__item {
    background-color: #fff;
    padding-left: 30rpx;
}

.listview__item:active {
    background-color: #eee;
}

.listview__content {
    display: flex;
    align-items: center;
    padding: 40rpx 0;
    padding-right: 40rpx;
    border-bottom: 1rpx solid #EEEEEE;
}

.listview__item:last-child .listview__content {
    border-bottom: none;
}

.listview__info {
    flex: 1;
    font-size: 17px;
    color: #555555;
}

.listview__info-subtitle {
    font-size: 14px;
    color: #888;
    margin-top: 5px;
}

.listview__arrow {
    display: inline-block;
    width: 8px;
    height: 13px;
}

.ui-tips {
    position: absolute;
    left: 0;
    top: 50%;
    transform: translate(0,-50%);
    font-size: 14px;
    color: #555555;
    text-align: center;
    width: 100%;
    padding: 0 10px;
}

.ui-c-gray {
    color: #888888;
}

.ui-c-red {
    color: #cc463d!important;
}

.ui-c-blue {
    color: #1A8CC2;
}

.ui-delete {
    vertical-align: top;
    width: 32px;
    height: 32px;
}

.ui-b-blue {
    background-color: #1A8CC2;
}

.ui-b-green {
    background-color: #1AAD19;
}

.ui-b-orange {
    background-color: #FD8100;
}

.ui-b-red {
    background-color: #D90000;
}

.ui-b-gray {
    background-color: rgba(0,0,0,0.2);
}

body {
    font: 14px/20px "微软雅黑","Lucida Grande","Lucida Sans Unicode",Helvetica,Arial,Verdana,sans-serif;
}

body,h1,h2,h3,h4,p,ul,ol,dl,dd,fieldset,textarea.button {
    color: #353535;
    padding: 0;
    margin: 0;
}

fieldset,legend,textarea {
    padding: 0;
}

ul,ol {
    padding-left: 0;
    list-style-type: none;
    -webkit-margin-before: 0;
    -webkit-margin-after: 0;
    -webkit-margin-start: 0;
    -webkit-margin-end: 0;
}

a img,fieldset {
    border: 0;
}

a {
    color: #5c5c5c;
    text-decoration: none;
}

figure {
    -webkit-margin-before: 0;
    -webkit-margin-after: 0;
    -webkit-margin-start: 0;
    -webkit-margin-end: 0;
}

.color_hint {
    color: #b71414;
}

.wx_page img {
    max-width: 100%;
}

html,body {
    -webkit-touch-callout: none;
    user-select: none;
}

.none {
    display: none;
}

.no_padding {
    padding: 0;
}

.wrp_bg {
    background-color: #efeff4;
}

body {
    line-height: 1.6;
    font-size: 14px;
}

.express_icon {
    width: 22px;
    height: 22px;
    margin-right: 20rpx;
}

.icon_arrow {
    position: absolute;
    right: 12px;
    top: 11px;
    width: 7px;
    height: 7px;
    border-color: #353535;
    border-style: solid;
    border-width: 2px 2px 0 0;
    transform: rotate(45deg);
}

.wx_page {
    padding-bottom: 1px;
}

page {
    background-color: #F7F7F7;
}

.area_box {
    background-color: #FFFFFF;
}

@-webkit-keyframes loading {
    from {
        -webkit-transform: rotate(0deg);
    }

    to {
        -webkit-transform: rotate(360deg);
    }
}

@keyframes loading {
    from {
        transform: rotate(0deg);
    }

    to {
        transform: rotate(360deg);
    }
}

.loading_box {
    text-align: center;
    padding-top: 460rpx;
}

.icon_loading {
    width: 25px;
    height: 25px;
    animation: loading 1s ease infinite;
}

.error_box {
    padding-top: 300rpx;
    text-align: center;
    font-size: 16px;
}

.icon_reload {
    width: 30px;
    height: 30px;
}

.reload_desc {
    color: #999;
    margin-top: 10px;
    margin-bottom: 25px;
}

.reload_link {
    color: #576B95;
}

.wx_flex_wrp {
    display: flex;
    align-items: center;
    justify-content: center;
}

.wx_flex_item {
    flex: 1;
}