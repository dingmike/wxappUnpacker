.icon-expired::before {
    content: "";
    position: absolute;
    top: 50%;
    right: 80rpx;
    transform: translateY(-50%);
    width: 140rpx;
    height: 106rpx;
    background-repeat: no-repeat;
    background-image: url(https://s10.mogucdn.com/p2/161110/upload_498c9lk0g6h513fhahgah0aicfj4j_140x106.png);
    background-size: contain;
}

.icon-used::before {
    content: "";
    position: absolute;
    top: 50%;
    right: 80rpx;
    transform: translateY(-50%);
    width: 140rpx;
    height: 106rpx;
    background-repeat: no-repeat;
    background-image: url(https://s10.mogucdn.com/p2/161110/upload_7gkg0ij41cccj7ekeg3k2eb9b41ag_140x107.png);
    background-size: contain;
}

.withdraw-btn,.active-btn {
    position: absolute;
    top: 50%;
    right: 40rpx;
    z-index: 1;
    transform: translateY(-50%);
    width: 142rpx;
    height: 46rpx;
    line-height: 46rpx;
    border-radius: 10rpx;
    border: 1px solid #fd638a;
    color: #fd638a;
    font-size: 28rpx;
    background-color: #fff;
    text-align: center;
}

.empty-block {
    padding-top: 30%;
    text-align: center;
    line-height: 80rpx;
    color: #999;
    font-size: 28rpx;
}

.empty-icon {
    width: 218rpx;
    height: 218rpx;
    margin: 0 auto;
    background-repeat: no-repeat;
    background-color: #e5e5e5;
    background-image: url(https://s10.mogucdn.com/p1/151008/upload_ie2tmy3dmfrtczjrgqzdambqhayde_218x218.png);
    background-size: contain;
    border-radius: 50%;
}