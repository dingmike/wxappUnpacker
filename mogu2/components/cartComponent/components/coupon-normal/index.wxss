.couponlist {
    width: 100%;
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    z-index: 102;
}

.ui-mask {
    position: absolute;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    z-index: 9;
    background-color: rgba(0,0,0,.4);
}

.couponlist-content-normal {
    position: relative;
    background: #fff;
    z-index: 101;
    width: 100%;
    overflow: hidden;
}

.couponlist-content--title {
    font-weight: 400;
    text-align: center;
    padding: 23rpx 32rpx;
    color: #999;
    font-size: 32rpx;
}

.couponlist-shopname {
    flex: 1;
}

.couponlist-content-normal--list {
    padding: 0 0 32rpx 32rpx;
    max-height: 650rpx;
    box-sizing: border-box;
    width: 760rpx;
}

.couponlistItem-item {
}

.couponlistItem-item--content {
    flex: 1;
}

.couponlistItem {
    padding: 15rpx 0 21rpx;
}

.couponlistItem-item--cash {
    font-size: 46rpx;
    color: #f57;
    line-height: 65rpx;
}

.couponlistItem-item--infor {
    font-size: 24rpx;
    color: #666;
    line-height: 33rpx;
}

.couponlistItem-item--date {
    font-size: 24rpx;
    color: #999;
    line-height: 33rpx;
}

.couponlistItem-item--btn {
    font-size: 24rpx;
    color: #999;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    border: solid 1px #fff;
    width: 150rpx;
    margin-right: 42rpx;
    background: #fff;
}

.couponlistItem-item--btn:before,.couponlistItem-item--btn:after {
    display: none;
}

.couponlistItem-item--get {
    width: 150rpx;
    border-radius: 4px;
    border: solid 1px #ff5777;
    color: #ff5777;
}

.couponlist-content--close {
    padding: 10rpx;
}