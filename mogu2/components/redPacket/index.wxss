@import "../gamePop/index.wxss";

@import "../countdown/index.wxss";

@import "../toast/index.wxss";

.red-packet-content {
    z-index: 110;
    position: fixed;
    width: 75%;
    max-height: 500rpx;
    height: 500rpx;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    -webkit-transform: translate(-50%,-50%);
}

.rp-title-text {
    color: #FBF495;
    font-size: 40rpx;
    text-align: center;
}

.rp-title-text.miss {
    margin-top: 50rpx;
}

.rp-pop-countdown {
    width: 100%;
    height: 84rpx;
    text-align: center;
}

.rp-countdown-left {
    font-size: 28rpx;
    color: #fff;
    line-height: 84rpx;
    margin-right: 10rpx;
}

.red-packet-countdown {
    width: 70rpx;
    height: 84rpx;
}

.countdown-font {
    font-size: 28rpx;
    color: #fff;
    line-height: 84rpx;
}

.red-packet-countdown-num {
    font-size: 56rpx;
    color: #FBF495;
    line-height: 84rpx;
}

.rp-countdown-min {
    color: #FBF495;
    font-size: 38rpx;
    margin-right: 10rpx;
}

.rp-start-btn {
    content: none;
    left: 33%;
    top: 35%;
    width: 200rpx;
    height: 200rpx;
    background: url("https://s10.mogucdn.com/mlcdn/c45406/170911_853i0db8c34hbf653ja8k1lf2ige8_200x200.png");
    background-size: 100%;
}

.rp-start-btn.front {
    transition: transform 150ms ease-in-out;
    transition: transform 150ms ease-in-out,-webkit-transform 150ms ease-in-out;
    transform: rotateY(0deg);
}

.rp-start-btn.back {
    transition: transform 150ms ease-in-out;
    transition: transform 150ms ease-in-out,-webkit-transform 150ms ease-in-out;
    transform: rotateY(-90deg);
}

.rp-start-btn::after {
    content: none;
}

.rp-lottery-des {
    position: absolute;
    width: 80%;
    left: 50%;
    bottom: -10rpx;
    -webkit-transform: translate(-50%,0);
    text-align: center;
}

.rp-lottery-des-fail {
    position: absolute;
    width: 80%;
    left: 50%;
    bottom: 10rpx;
    -webkit-transform: translate(-50%,0);
    text-align: center;
}

.rp-copyright {
    position: absolute;
    width: 80%;
    left: 50%;
    bottom: -80rpx;
    font-size: 18rpx;
    color: #EFC380;
    -webkit-transform: translate(-50%,0);
    text-align: center;
}

.rp-rule-info {
    font-size: 28rpx;
    color: #ffffff;
    line-height: 38rpx;
}

.rp-rule-info-fail {
    font-size: 32rpx;
    color: #ffffff;
    line-height: 38rpx;
}

.game-bottom-title {
    font-size: 26rpx;
}