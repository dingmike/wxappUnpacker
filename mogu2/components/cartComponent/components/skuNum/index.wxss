.sku-num--box {
    width: 560rpx;
    height: 332rpx;
    margin: 130rpx auto 0;
    border-radius: 8rpx;
    background: #fff;
    z-index: 10;
}

.sku-num--title {
    line-height: 50rpx;
    margin: 40rpx 0 36rpx;
    color: #000;
    font-size: 36rpx;
    text-align: center;
}

.sku-num--input {
    width: 160rpx;
    height: 60rpx;
    line-height: 60rpx;
    margin: 0 auto;
    border-radius: 4rpx;
    border: solid 1px #e5e5e5;
    text-align: center;
    font-size: 32rpx;
    color: #333;
}

.sku-num--opt {
    height: 100rpx;
    line-height: 100rpx;
    margin-top: 44rpx;
    border-top: solid 1px #e5e5e5;
    text-align: center;
    font-size: 36rpx;
    color: #666;
}

.sku-num--btn {
    width: 280rpx;
}

.sku-num--btn:first-child {
    border-right: solid 1px #e5e5e5;
}

.btn-confirm {
    color: #ff5777;
}