.act-popup-overlay {
    position: fixed;
    display: flex;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-color: rgba(0,0,0,0.5);
    flex-direction: column;
    justify-content: center;
    align-content: center;
    z-index: 1000;
}

.act-popup-content {
    position: relative;
    margin: 0 auto;
    pointer-events: auto;
    display: flex;
    flex-direction: column;
    background-size: 100%;
    background-repeat: no-repeat;
}

.act-popup-btn {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 24%;
}

.act-popup-btn-inner {
    width: 100%;
    height: 100%;
    background-color: inherit;
}

.act-popup-btn-inner::after {
    display: none;
}

.act-popup-close {
    position: absolute;
    right: 0;
    top: 0;
    width: 84rpx;
    height: 84rpx;
}