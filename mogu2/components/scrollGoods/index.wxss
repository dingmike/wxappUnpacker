@import "../countdown/index.wxss";

@import "../heading/index.wxss";

.scroll-goods-header {
    position: relative;
}

.scroll-goods-countdown-box {
    position: absolute;
    left: 152rpx;
    top: 0;
    height: 70rpx;
    padding: 20rpx 0 0 0;
    display: flex;
    align-items: center;
}

.scroll-goods-countdown-tips {
    float: left;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    color: #999999;
    max-width: 180rpx;
    overflow: hiden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.scroll-goods-countdown {
    float: left;
    margin: 0 8rpx;
}

.scroll-cart-num {
    width: 34rpx;
    height: 32rpx;
    line-height: 32rpx;
    border-radius: 4rpx;
    background-color: #333333;
    font-size: 22rpx;
    font-weight: 500;
    color: #ffffff;
    text-align: center;
}

.scroll-cart-symbol {
    width: 10rpx;
    height: 40rpx;
    line-height: 40rpx;
    color: #333333;
    text-align: center;
}

.scroll-goods {
    font-family: PingFangSC;
    width: 750rpx;
    overflow: hidden;
}

.scroll-goods-content {
    height: 276rpx;
    width: 750rpx;
    overflow: hidden;
}

.scroll-goods-scroll {
    height: 300rpx;
    width: 750rpx;
    overflow-x: scroll;
    overflow-scrolling: touch;
    -webkit-overflow-scrolling: touch;
}

.scroll-goods-flex {
    padding: 20rpx 0 0 0;
    display: flex;
}

.scroll-goods-center {
    justify-content: center;
}

.scroll-goods-item {
    flex-shrink: 0;
    margin: 0 12rpx 0 0;
    width: 160rpx;
    height: 256rpx;
    position: relative;
}

.scroll-goods-discount {
    position: absolute;
    top: 0;
    left: 0;
    padding: 2rpx 8rpx;
    border-radius: 4rpx;
    background-color: rgba(252,60,100,.8);
    font-size: 18rpx;
    color: #ffffff;
}

.scroll-goods-item:nth-child(1) {
    margin: 0 12rpx 0 24rpx;
}

.scroll-goods-item:nth-last-child(1) {
    box-sizing: content-box;
    padding-right: 24rpx;
    margin: 0;
}

.scroll-goods-image-box {
    width: 160rpx;
    height: 160rpx;
    border: 0;
    overflow: hidden;
}

.scroll-goods-image {
    width: 160rpx;
    height: 160rpx;
    border: 0;
}

.scroll-goods-image_showDiscount {
    width: 140rpx;
    height: 140rpx;
    margin: 20rpx 10rpx;
}

.scroll-goods-title {
    max-width: 100%;
    height: 34rpx;
    line-height: 34rpx;
    margin: 8rpx 0 0 0;
    padding: 0;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: center;
    font-size: 24rpx;
}

.scroll-goods-price {
    height: 40rpx;
    max-width: 100%;
    padding: 0;
    line-height: 40rpx;
    font-size: 28rpx;
    font-weight: 500;
    text-align: center;
    color: rgba(252,60,100,.8);
    margin-top: -2rpx;
}