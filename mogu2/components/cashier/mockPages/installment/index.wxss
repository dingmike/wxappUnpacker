.cashier-installment-container {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.cashier-installments {
    background: #fff;
    border-bottom: 1rpx solid #e5e5e5;
}

.cashier-installment {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 120rpx;
    margin-left: 30rpx;
    padding-right: 30rpx;
    border-top: 1rpx solid #e5e5e5;
}

.cashier-installment-0 {
    border-top: none;
}

.cashier-installment-radio {
    transform: scale(0.8,0.8);
    margin-right: 20rpx;
}

.installment-periods {
    font-size: 30rpx;
    color: #333333;
}

.installment-detail {
    font-size: 28rpx;
    color: #000000;
    text-align: right;
}

.installment-eachPrice {
    color: #FF5777;
    margin-left: 10rpx;
}

.installment-fee {
    font-size: 24rpx;
    color: #999999;
    text-align: right;
}