.searchBox-hotword {
    width: 686rpx;
    margin: 4rpx 32rpx 0;
}

.ht-header {
    width: 100%;
    height: 33rpx;
    margin: 0 0 24rpx;
    line-height: 33rpx;
    font-size: 24rpx;
}

.ht-title {
    float: left;
    color: #666;
}

.ht-change {
    float: right;
    color: #999;
}

.ht-items-wrap {
    width: 100%;
}

.ht-item {
    height: 60rpx;
    line-height: 60rpx;
    font-size: 24rpx;
    border-radius: 4rpx;
    margin: 0 20rpx 20rpx 0;
    padding: 0 14rpx;
    background: #f6f6f6;
    color: #333;
}