@import "../../../components/captcha/index.wxss";

@import "../../../components/countdown/index.wxss";

page {
    background: #fff;
}

.bind-phone-wrap {
    width: 630rpx;
    margin: auto;
}

.bind-title {
    font-size: 40rpx;
    margin: 39rpx 0 70rpx 0;
}

.bind-tel {
    width: 100%;
    border-bottom: 1rpx solid #e5e5e5;
    font-size: 28rpx;
    height: 100rpx;
    display: flex;
    align-items: center;
}

.bind-tel-label {
    width: 102rpx;
    color: rgb(153,153,153);
    border-right: 1rpx solid #e5e5e5;
    font-size: 40rpx;
    margin-right: 30rpx;
}

.bind-tel-input {
    flex: 1;
    color: #424242;
    font-size: 40rpx;
}

.close-wrap {
    height: 40rpx;
    width: 40rpx;
    background: #999;
    color: #fff;
    border-radius: 20rpx;
    text-align: center;
}

.close {
    line-height: 40rpx;
    text-align: center;
    font-size: 25rpx;
}

.close::before {
    content: "\2716";
}

.bind-vericode {
    width: 100%;
    border-bottom: 1rpx solid #e5e5e5;
    height: 100rpx;
    display: flex;
    align-items: center;
}

.bind-vericode-label {
    width: 250rpx;
    text-align: right;
    color: rgb(102,102,102);
    font-size: 28rpx;
}

.bind-vericode-input {
    flex: 1;
    width: 490rpx;
    color: #424242;
    font-size: 40rpx;
    min-height: 0;
}

.bind-confirm {
    width: 100%;
    height: 100rpx;
    border-radius: 100rpx;
    background: linear-gradient(to right,#FF5777,#FF468F);
    color: #fff;
    font-size: 36rpx;
    margin-top: 60rpx;
    line-height: 100rpx;
    text-align: center;
}

.change-phone-wrap {
    display: flex;
    flex-flow: column nowrap;
    align-items: center;
    padding: 0 32rpx;
}

.change-title {
    color: #999999;
    font-size: 28rpx;
}

.change-input {
    caret-color: red;
    width: 270rpx;
    height: 73rpx;
    font-size: 52rpx;
    margin-top: 10rpx;
    color: #424242;
    text-align: center;
}

.change-phone {
    color: #666666;
    font-size: 28rpx;
    margin-top: 39rpx;
}

.change-getcode {
    color: #FF1977;
    font-size: 28rpx;
    margin-top: 38rpx;
}

.change-countdown {
    color: #666666;
    font-size: 28rpx;
    margin-top: 38rpx;
}

.change-countdown-text {
    color: #666666;
    font-size: 28rpx;
}

.change-next {
    color: #FFFFFF;
    font-size: 36rpx;
    width: 100%;
    height: 100rpx;
    border-radius: 6rpx;
    background: linear-gradient(to right,#FF5777,#FF468F);
    line-height: 100rpx;
    text-align: center;
    margin-top: 117rpx;
}

.disabled {
    background: #D2D2D2;
}

.shieldcaptain-warpper {
    padding: 0;
}