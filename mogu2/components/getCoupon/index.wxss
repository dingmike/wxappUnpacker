.coupon_form {
    display: block;
    width: 750rpx;
}

.coupon_form .coupon_submit {
    background: none;
    width: 100%;
    height: 100%;
    padding: 0;
    border-radius: 0;
    background-position: top center;
    background-size: 100% auto!important;
    background-repeat: no-repeat!important;
}

.coupon_form .coupon_submit:hover {
    background: none;
}

.coupon_form .coupon_submit::after {
    display: none;
}