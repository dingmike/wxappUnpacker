.component__coupon {
    height: 125rpx;
    position: relative;
    background-size: cover;
    background-repeat: no-repeat;
}

.component__coupon .coupon__content {
    position: relative;
    overflow: hidden;
    color: #ffffff;
    border-radius: 4rpx;
    height: 100rpx;
    width: 200rpx;
    padding: 8rpx;
}

.component__coupon .coupon__content--price {
}

.component__coupon .price__unit {
    width: 21rpx;
    height: 21rpx;
    border-radius: 50%;
    margin-left: -6rpx;
    background-size: 200rpx 125rpx;
    background-position: center center;
    background-repeat: no-repeat;
}

.component__coupon .price__unit--content {
    width: 18rpx;
    height: 18rpx;
    border-radius: 50%;
    background: url(https://s10.mogucdn.com/mlcdn/c45406/171220_09d7kgkbkf93hlgf5bafcbg703kdi_26x26.png);
    background-size: cover;
    background-repeat: no-repeat;
}

.component__coupon .price__text {
    font-size: 48rpx;
    line-height: 48rpx;
}

.component__coupon .coupon__content--desc {
    font-size: 20rpx;
    word-break: keep-all;
}

.component__coupon .coupon__content--tag {
    width: 90rpx;
    height: 90rpx;
    position: absolute;
    bottom: -28rpx;
    right: -20rpx;
    transform: rotate(-30deg);
    border: 2rpx solid #666666;
    border-radius: 50%;
}

.component__coupon .tag__text {
    width: 90rpx;
    height: 90rpx;
    line-height: 90rpx;
    margin-top: -12rpx;
    margin-left: -2.5rpx;
    text-align: center;
    font-size: 28rpx;
    color: #666666;
}