@font-face {
    font-family: 'special';
    src: url('https://s10.mogucdn.com/new1/v1/bmisc/3d57ce4797b8c9999cf99233a543ed06/187513770477.ttf') format('truetype');
}

.header {
    width: 100%;
    position: relative;
    padding-top: 1rpx;
}

.header--shop-icon-view {
    width: 136rpx;
    height: 136rpx;
    margin: 20rpx auto 0;
}

.header--shop-icon {
    width: 100%;
    height: 100%;
    border: 1rpx solid #E5E5E5;
    border-radius: 4rpx;
}

.header--shop-desc {
    width: 100%;
    display: block;
    font-size: 28rpx;
    color: #333333;
    text-align: center;
    margin-top: 20rpx;
    height: 40rpx;
    line-height: 40rpx;
}

.header--coupon-button {
    width: 270rpx;
    height: 100rpx;
    display: inline-block;
}

.header--act {
    width: 100%;
    height: 130rpx;
    text-align: center;
    position: relative;
}

.header--act-image {
    width: 502rpx;
    height: 134rpx;
    margin-top: 35rpx;
}

.share-button {
    width: 100%;
    opacity: 0;
    height: 100%;
    position: absolute;
    z-index: 2;
    left: 0;
    top: 0;
}

.coupon {
    width: 702rpx;
    height: 100rpx;
    margin: 0 auto;
    background-repeat: no-repeat;
    background-size: cover;
    position: relative;
    z-index: 2;
}

.coupon-wrapper {
    background: #fff;
    padding-bottom: 25rpx;
    margin-top: -1rpx;
}

.trust {
    background-image: url(https://s10.mogucdn.com/mlcdn/c45406/170926_045j3if852dlli66a7ldgjlag3193_449x56.png);
    background-position: center;
    background-size: 450rpx;
    margin: 25rpx auto 0;
    width: 450rpx;
    height: 56rpx;
}

.coupon--is-new {
    background-image: url('https://s10.mogucdn.com/mlcdn/c45406/171109_44g272il66decgb4ghl9db2il3e1h_702x100.png');
}

.coupon--normal {
    background-image: url('https://s10.mogucdn.com/mlcdn/c45406/171109_6j8b912cha05d7aff0ii9h225hh9i_702x100.png');
}

.coupon--coupon-left {
    text-align: center;
    width: 420rpx;
    display: inline-block;
    vertical-align: top;
    padding-top: 16rpx;
}

.coupon--coupon-price {
    color: white;
    display: inline-block;
    font-size: 50rpx;
    font-weight: 600;
    line-height: 67rpx;
    vertical-align: bottom;
}

.coupon--coupon-image {
    display: inline-block;
    vertical-align: middle;
}

.coupon--coupon-desc {
    width: 285rpx;
    height: 45rpx;
}

.coupon--right-column {
    width: 266rpx;
    height: 100%;
    position: absolute;
    right: 0;
    top: 0;
}

.coupon--right-column--button {
    width: 216rpx;
    height: 64rpx;
    line-height: 64rpx;
    border-radius: 61rpx;
    opacity: .96;
    text-align: center;
    margin: 0 auto;
    margin-top: 17rpx;
    float: none;
}

.coupon--right-column--button_normal {
    color: #333333;
    background: linear-gradient(left top,#FFF15C,#FFDA21);
    background: -webkit-linear-gradient(left top,#FFF15C,#FFDA21);
}

.coupon--right-column--button_is-grey {
    color: #666;
    background: #E5E5E5;
}

.item-info-wrap {
    background: #fff;
}

.item-info {
    padding: 20rpx 0 0;
    margin: 0 auto;
    width: 702rpx;
    height: 420rpx;
}

.item-info--item-img-view {
    position: relative;
    display: inline-block;
    width: 380rpx;
    height: 380rpx;
    border-radius: 4rpx;
    overflow: hidden;
}

.item-info--item-img-view-act3 {
    position: relative;
    display: inline-block;
    width: 700rpx;
    height: 380rpx;
    border-radius: 4rpx;
    overflow: hidden;
}

.item-info--item-tag {
    position: absolute;
    left: 0;
    top: 0;
    width: 66rpx;
    height: 66rpx;
    border: none;
    z-index: 999;
}

.item-info--item-img {
    width: 100%;
    height: 380rpx;
}

.item-info--item-content {
    display: inline-block;
    margin-left: 22rpx;
    vertical-align: top;
    width: 300rpx;
    position: relative;
    height: 380rpx;
}

.item-info--title {
    line-height: 40rpx;
    height: 240rpx;
    font-size: 30rpx;
    overflow: hidden;
    width: 100%;
    display: block;
}

.item-info--original-price {
    color: #999999;
    font-size: 24rpx;
    text-decoration: line-through;
    display: block;
}

.item-info--item-price {
    position: absolute;
    bottom: 0;
}

.item-info--after-cut {
    margin-top: 5rpx;
}

.item-info--coupon-icon {
    width: 86rpx;
    height: 40rpx;
    vertical-align: middle;
}

.item-info--after-cut-unit {
    color: #ff5777;
    margin-right: -3rpx;
    position: relative;
    top: 3rpx;
}

.item-info--after-cut-price {
    vertical-align: middle;
    font-family: Arial,Helvetica,sans-serif;
    color: #FF5777;
    font-size: 36rpx;
}

.rule {
    margin: 40rpx auto 0;
    width: 686rpx;
}

.rule--title {
    text-align: center;
    border-top: 1rpx solid #DDDDDD;
}

.rule--title-content {
    display: inline-block;
    background: #efefef;
    font-size: 28rpx;
    color: #666;
    padding: 0 20rpx;
    position: relative;
    top: -23rpx;
    height: 30rpx;
    line-height: 30rpx;
}

.rule--article {
    color: #999999;
    font-size: 26rpx;
    line-height: 40rpx;
    margin-top: 20rpx;
}

.rule--article--index {
    display: inline-block;
    width: 40rpx;
    vertical-align: top;
}

.rule--article--content {
    display: inline-block;
    width: 640rpx;
}

.coupon-dialog {
    position: fixed;
    background: rgba(0,0,0,0.5);
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: 1;
}

.coupon-dialog--coupon {
    background-image: url('https://s10.mogucdn.com/mlcdn/c45406/171114_3gk3h922eh14hf7ifa031cbf1616e_702x100.png');
    position: absolute;
    width: 702rpx;
    height: 100rpx;
    filter: drop-shadow(0 16rpx 64rpx rgba(232,27,80,0.16));
    background-size: cover;
    top: 0;
    left: 0;
    z-index: 3;
}

.coupon-dialog--coupon-button {
    width: 440rpx;
    height: 80rpx;
    background: #FF5692;
    color: white;
    box-shadow: 0 8rpx 64rpx rgba(232,27,80,0.16);
    line-height: 80rpx;
    text-align: center;
    position: absolute;
    top: 142rpx;
    border-radius: 40rpx;
    left: 50%;
    margin-left: -220rpx;
    z-index: 3;
}

.coupon-dialog--valid-date {
    font-size: 20rpx;
    color: white;
    position: absolute;
    bottom: 23rpx;
    width: 420rpx;
    text-align: center;
}

.dialog-wrapper {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.6);
    z-index: 100;
}

.dialog-content {
    width: 555rpx;
    height: 642rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -280rpx;
    margin-top: -321rpx;
    background: #fff;
    border-radius: 16rpx;
}

.dialog-image {
    width: 312rpx;
    height: 312rpx;
    display: block;
    margin: 30rpx auto;
}

.dialog-h1 {
    text-align: center;
    font-size: 34rpx;
    color: #666666;
}

.dialog-h2 {
    font-size: 24rpx;
    text-align: center;
    color: #999999;
    margin-top: 12rpx;
}

.dialog-special {
    font-size: 48rpx;
    font-weight: 500;
    color: #ff396d;
}

.dialog-button {
    width: 436rpx;
    height: 84rpx;
    line-height: 84rpx;
    border-radius: 8rpx;
    background-color: #ff396d;
    color: white;
    text-align: center;
    margin: 44rpx auto 0;
}

.rule-container {
    margin-top: 50rpx;
}

.submit-button {
    opacity: 0;
    width: 100%;
    height: 100%;
}