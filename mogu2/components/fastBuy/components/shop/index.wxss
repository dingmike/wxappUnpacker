.shop {
    background: #fff;
    margin-top: 30rpx;
}

.shopHead {
    border-bottom: 1rpx solid #ececec;
    padding: 30rpx 32rpx;
    background: #fff;
    align-items: center;
}

.shopHead-title {
    flex: 1;
    color: #424242;
    font-size: 28rpx;
}

.shopHead-title--img {
    height: 32rpx;
}

.shopHead-im {
    color: #666;
    font-size: 28rpx;
    position: relative;
    align-items: center;
}

.shopHead-im--icon {
    color: #FF5777;
    padding-right: 4rpx;
}

.m-icon-message {
    font-size: 36rpx;
    padding-right: 8rpx;
}

.skuItem {
    border-bottom: 1rpx solid #ececec;
    padding-bottom: 20rpx;
}

.skuItem-wrap {
    position: relative;
    padding: 30rpx 32rpx 20rpx 30rpx;
    background: #fff;
}

.skuItem-img {
    border: 1rpx solid #c8c8c8;
    width: 144rpx;
    height: 192rpx;
}

.skuItem-desc {
    width: 100%;
    flex: 1;
    word-break: break-all;
    padding: 0 20rpx;
    font-size: 24rpx;
}

.skuItem-desc--title {
    color: #333;
    height: 68rpx;
    font-size: 24rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    display: -webkit-box;
    margin-bottom: 10rpx;
    line-height: 36rpx;
}

.skuItem-desc-attr {
    font-size: 24rpx;
    color: #999;
    line-height: 36rpx;
}

.skuItem-desc--size {
    color: #999;
}

.skuItem-price {
    position: relative;
    color: #333;
    text-align: right;
    font-size: 24rpx;
    line-height: 36rpx;
    font-family: Arial;
    flex-direction: column;
    justify-content: space-between;
}

.skuItem-price--old {
    text-decoration: line-through;
    color: #999;
    font-size: 24rpx;
}

.skuItem-num {
    color: #999;
    align-items: center;
}

.skuItem-price-top {
    flex-direction: column;
}

.skuItem-instead {
    color: #999;
    position: relative;
    width: 160rpx;
    height: 40rpx;
    font-size: 0;
    text-align: center;
    align-items: center;
}

.skuItem-instead--origininput {
    font-size: 24rpx;
}

.skuItem-instead--input {
    display: inline-block;
    width: 56rpx;
    height: 38rpx;
    border: 1rpx solid #999;
    background: #fff;
    text-align: center;
    color: #333;
    border-radius: 0;
    font-size: 28rpx;
}

.skuItem-instead-number {
    display: inline-block;
    cursor: pointer;
    border-style: solid;
    border-color: #999;
    width: 50rpx;
    height: 38rpx;
    font-size: 24rpx;
    background: #fff;
    border-radius: 0;
    padding: 0;
    line-height: inherit;
    margin: 0;
}

.skuItem-instead-number:before,.skuItem-instead-number:after {
    display: none;
}

.skuItem-instead--add {
    border-width: 1rpx 1rpx 1rpx 0;
}

.skuItem-instead--reduce {
    border-width: 1rpx 0 1rpx 1rpx;
}

.skuItem-instead--disabled {
    background: #F6F6F6;
    color: #E5E5E5;
    border-color: #E5E5E5;
}

.skuItem-wh {
    background: #FFEBF0;
    font-size: 24rpx;
    color: #FF5575;
    height: 54rpx;
    line-height: 54rpx;
    margin: 0 32rpx;
}

.skuItem-redPacket {
    color: #FF5575;
}

.skuItem-redPacket--desc {
    border: 1rpx solid #FF5575;
    padding: 0 5rpx;
}

.salebar {
    position: relative;
    padding: 0 32rpx;
    background: #fff;
    font-size: 28rpx;
    color: #333;
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1rpx solid #ececec;
    text-align: left;
    border-radius: 0;
}

.salebar:before,.salebar:after {
    display: none;
}

.salebar-title--red {
    color: #FF5575;
}

.salebar-price,.shopSale {
    align-self: center;
}

.salebar-price {
    font-family: Arial;
}

.salebar-price--red {
    color: #FF5575;
}

.presaleFirstPrice {
    flex: 1;
}

.salebar-arrow {
    float: right;
    color: #999;
    line-height: 84rpx;
    margin-left: 10rpx;
}

.salebar-desc {
    height: 100%;
    margin-right: 30rpx;
    color: #999;
    flex: 1;
    align-self: center;
    font-size: 24rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.salebar-title--red:before {
    content: '';
    position: absolute;
    width: 4rpx;
    height: 100%;
    background: #ff5575;
    left: -32rpx;
    top: 0;
}

.shopTotal {
    flex: 1;
}

.comment {
    z-index: 0;
    position: relative;
    padding: 20rpx 32rpx;
}

.comment-text {
    border: none;
    padding: 12rpx 20rpx;
    background: #F5F5F5;
    border-radius: 8rpx;
    font-size: 24rpx;
}

.m-icon-edit {
    padding: 12rpx 0 12rpx 8rpx;
    background: #fff;
    display: inline-block;
    line-height: inherit;
    font-size: 24rpx;
}

.m-icon-edit:before,.m-icon-edit:after {
    border: none;
}

.taxQues {
    color: #fff;
    background: #999;
    border-radius: 50%;
    width: 30rpx;
    height: 30rpx;
    line-height: 32rpx;
    text-align: center;
    font-size: 24rpx;
    align-self: center;
    padding: 0;
    margin: 0;
}

.taxtip {
    position: absolute;
    color: #ff5777;
    background: #FFEBF0;
    font-size: 22rpx;
    line-height: 28rpx;
    width: 568rpx;
    padding: 16rpx 20rpx;
    border-radius: 6rpx;
    top: -76rpx;
    left: 32rpx;
}

.taxtiparrow {
    position: absolute;
    bottom: -8rpx;
    left: 50rpx;
    width: 0;
    height: 0;
    border-top: 10rpx solid #ffebf0;
    border-left: 10rpx solid transparent;
    border-right: 10rpx solid transparent;
}