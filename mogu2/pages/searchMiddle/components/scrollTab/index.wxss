.scrollTab-height {
    width: 100%;
    height: 90rpx;
}

.scrollTab-box {
    position: fixed;
    top: 90rpx;
    left: 0;
    width: 100%;
    height: 90rpx;
    z-index: 9;
    border-bottom: 1px solid #e2e2e2;
    background: #fff;
}

.scrollTab-list {
    width: 100%;
    height: 100%;
    align-items: center;
}

.scrollTab-item {
    width: 50%;
    height: 100%;
    font-size: 28rpx;
}

.scrollTab-item-text {
    width: 185rpx;
    height: 100%;
    align-items: center;
    border-bottom: none;
    margin: 0 auto;
    color: #666;
}

.scrollTab-item-text-active {
    border-bottom: 4rpx solid #ff5777;
    color: #ff5777;
}