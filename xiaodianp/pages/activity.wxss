.loop-wording {
    display: block;
    width: 100%;
    height: 50px;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
}

.marquee_box {
    width: 100%;
    height: 25px;
    position: relative;
    display: -webkit-box;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    background-color: #FFE7DA;
}

.marquee_text {
    white-space: nowrap;
    position: absolute;
    top: 0;
    margin-left: 40px;
    margin-top: 2px;
    color: #FE3B2E;
}

.tips {
    width: 35px;
    height: 25px;
    z-index: 300;
    background-color: #FFE7DA;
    display: -webkit-box;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
}

.tips image {
    width: 18px;
    height: 18px;
    z-index: 300;
}

page {
    background-color: #fff;
    height: 100%;
}

.container {
    background-color: white;
    display: -webkit-box;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    height: 100%;
    width: 100%;
}

.item-container {
    display: -webkit-box;
    display: flex;
    flex-wrap: wrap;
    width: 100%;
    margin-top: 50rpx;
}

.item {
    position: relative;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    width: 50%;
    background-color: white;
}

.item-block {
    display: -webkit-box;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    height: 500rpx;
    margin-bottom: 20rpx;
}

.item-block image {
    width: 330rpx;
    height: 330rpx;
    margin: auto;
}

.item-block .name-line {
    font-size: 24rpx;
    line-height: 32rpx;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    height: 60rpx;
    color: #545454;
    margin: 0 20rpx;
}

.item-block .price-view {
    display: -webkit-box;
    display: flex;
    -webkit-box-align: baseline;
    align-items: baseline;
    margin: 10rpx 20rpx 0 20rpx;
}

.item-block .price-line {
    color: #333;
    font-weight: 600;
    font-size: 28rpx;
    text-align: center;
}

.item-block .price-line-none {
    color: #333;
    font-weight: 600;
    font-size: 28rpx;
    text-align: center;
}

.item-block .oriprice-line {
    color: #888888;
    text-decoration: line-through;
    font-size: 20rpx;
}