.searchWrap {
    display: block;
    width: 100%;
    height: 90rpx;
}

.searchContent {
    position: fixed;
    width: 100%;
    height: 90rpx;
    background: #efefef;
    z-index: 10;
}

.search-photo {
    position: relative;
    display: inline-block;
    width: 50rpx;
    height: 90rpx;
    margin-left: 16rpx;
    background-image: url('https://s10.mogucdn.com/mlcdn/c45406/171109_3clf4hi84jbef9ha382g33djd52hc_42x38.png');
    background-position: center center;
    background-repeat: no-repeat;
    background-size: 42rpx 38rpx;
}

.search-form {
    position: relative;
    display: inline-block;
    height: 60rpx;
    width: 548rpx;
    margin: 15rpx 0 15rpx 22rpx;
    border-radius: 6rpx;
    background: #fff;
    overflow: hidden;
}

.h-placeholder {
    position: absolute;
    font-size: 28rpx;
    padding: 0 16rpx;
    width: 476rpx;
    height: 60rpx;
    color: #333;
    overflow: hidden;
}

.no-photo-form {
    width: 598rpx;
}

.no-photo-placeholder {
    width: 526rpx;
}

.search-clear-wrap {
    position: absolute;
    right: 3rpx;
    bottom: 0;
    align-items: center;
    width: 40rpx;
    height: 60rpx;
}

.search-clear-all {
    height: 26rpx;
    width: 26rpx;
    border-radius: 16rpx;
    background: #d5d5d5;
    font-size: 14rpx;
    color: #fff;
    text-align: center;
    line-height: 26rpx;
    font-weight: bold;
}

.search-button {
    position: absolute;
    right: 0;
    display: inline-block;
    height: 90rpx;
    width: 120rpx;
    line-height: 90rpx;
    font-size: 28rpx;
    overflow: hidden;
    background: none;
    padding-left: 0;
    padding-right: 0;
}

.search-button::after {
    border: none;
}

.search-guide-container {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 99;
    background-color: rgba(0,0,0,.5);
}

.search-guide-img {
    margin-top: 10rpx;
    margin-left: 10rpx;
    width: 750rpx;
    height: 170rpx;
}

.guide-img {
    width: 344rpx;
    height: 168rpx;
}

.search-guide-text {
    margin-top: 20rpx;
    width: 750rpx;
    height: 40rpx;
    align-items: center;
    padding: 15rpx;
    color: #ffffff;
    font-size: 30rpx;
}

.search-guide-btn {
    margin-top: 20rpx;
    width: 750rpx;
    height: 80rpx;
    align-items: center;
}

.guide-btn {
    align-items: center;
    width: 210rpx;
    height: 70rpx;
    border: 1px solid #ffffff;
    color: #ffffff;
    font-size: 30rpx;
    background-color: #000000;
    border-radius: 35rpx;
}