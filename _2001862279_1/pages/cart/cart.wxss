.wx_page {
    font-size: 14px;
}

.empty_box {
    text-align: center;
    padding-top: 60%;
    color: #9A9A9A;
}

.cart_area {
    background-color: #FFFFFF;
    margin-top: 20rpx;
}

.enabled_list_hd {
    display: flex;
    margin-left: 30rpx;
    align-items: center;
    justify-content: center;
    border-bottom: 1rpx solid #EEEEEE;
}

.enabled_list_hd .checkbox_wrp {
    flex: 1;
}

.edit_btn {
    padding: 30rpx;
    line-height: 32rpx;
}

.cart_area .wx-checkbox-input {
    margin-right: 32rpx;
    width: 38rpx;
    height: 38rpx;
    border-radius: 50%;
    box-sizing: border-box;
}

.cart_area .wx-checkbox-input.wx-checkbox-input-checked {
    background-color: #FA7834;
    border: 1px solid #FA7834;
}

.cart_area .wx-checkbox-input.wx-checkbox-input-checked::before {
    content: "";
    width: 9px;
    height: 5px;
    border-left: 2px solid #FFFFFF;
    border-bottom: 2px solid #FFFFFF;
    border-radius: 1px;
    display: inline-block;
    margin-left: -6px;
    margin-top: -5px;
    transform: matrix(0.71,-0.71,0.71,0.71,0,0);
}

.goods_item {
    padding-left: 30rpx;
    display: flex;
    background-color: #FFFFFF;
}

.goods_item .checkbox_wrp {
    padding: 20rpx 0;
}

.goods_cover {
    font-size: 0;
    padding: 20rpx 0;
}

.goods_cover_img {
    width: 150rpx;
    height: 150rpx;
    margin-right: 25rpx;
}

.goods_info {
    font-size: 14px;
    line-height: 36rpx;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #EEEEEE;
    padding-right: 20rpx;
    flex: 1;
}

.cart_bd {
    padding-bottom: 110rpx;
    background-color: #F7F7F7;
}

.goods_list .goods_item:last-child .goods_info {
    border-bottom: none;
}

.disabled_list .goods_item:last-child .goods_info {
    border-bottom: none;
}

.goods_title {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.goods_description {
    margin-top: 6rpx;
    color: #9A9A9A;
}

.goods_description_item {
    margin-right: 6rpx;
}

.goods_cost {
    margin-top: 10rpx;
}

.goods_price {
    color: #FA7834;
    margin-right: 20rpx;
}

.goods_num {
    color: #9A9A9A;
}

.cart_ft {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #FFFFFF;
    border-top: 1rpx solid #EEEEEE;
    z-index: 9;
}

.normal_mode {
    display: flex;
    align-items: center;
    justify-content: center;
}

.edit_mod {
    text-align: right;
    font-size: 0;
}

.edit_mod .buy_btn {
    display: inline-block;
}

.buy_btn {
    width: 188rpx;
    height: 70rpx;
    font-size: 16px;
    padding: 0;
    line-height: 70rpx;
    border-radius: 6rpx;
    border: none;
    color: #FFFFFF;
    background-color: #FA7834;
    margin: 20rpx 30rpx;
}

.buy_btn:after {
    display: none;
}

.total_price_area {
    flex: 1;
    text-align: right;
}

.total_price {
    color: #FA7834;
    line-height: 1;
}

.total_price_num {
    font-size: 17px;
    line-height: 32rpx;
}

.total_price_desc {
    font-size: 12px;
    line-height: 34rpx;
    margin-top: 8rpx;
}

.disabled_list {
    margin-top: 20rpx;
}

.disabled_item {
    padding-left: 0;
}

.disabled_label {
    width: 100rpx;
    font-size: 12px;
    color: #9A9A9A;
    line-height: 34rpx;
    padding-top: 20rpx;
    text-align: center;
}

.disabled_item .goods_cover {
    opacity: 0.5;
}

.disabled_item .goods_info {
    opacity: 0.4;
}

.disabled_item .goods_title {
    color: #9A9A9A;
}

.disabled_item .goods_disabled_desc {
    margin-top: 10rpx;
}

.enabled_list {
    background-color: #FFFFFF;
}

.goods_opr {
    display: flex;
    align-items: center;
    justify-content: center;
    border-bottom: 1rpx solid rgba(238,238,238,0.4);
    padding: 0 20rpx;
}

.disabled_list .goods_item:last-child .goods_opr {
    border-bottom: none;
}

.goods_opr .delete_btn {
    font-size: 13px;
    height: 44rpx;
    line-height: 44rpx;
    border: 1px solid #353535;
    border-radius: 6rpx;
    padding: 0 16rpx;
}

.editor {
    display: inline-block;
}

.editor.disabled {
    color: #DDDDDD;
}

.editor_remove,.editor_add {
    width: 72rpx;
    height: 60rpx;
    line-height: 54rpx;
    text-align: center;
    font-size: 24px;
    color: #606060;
    background-color: #F7F7F7;
    vertical-align: top;
}

.editor_input {
    width: 74rpx;
    border-left: 3rpx solid #FFFFFF;
    border-right: 3rpx solid #FFFFFF;
    height: 60rpx;
    vertical-align: top;
    text-align: center;
    background-color: #F7F7F7;
    color: #606060;
}

.editor_remove {
    border-radius: 2rpx 0 0 2rpx;
}

.editor_add {
    border-radius: 0 2rpx 2rpx 0;
}

.sku_group_box {
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
}

.edit_list .goods_item {
    position: relative;
}

.edit_list .goods_cost {
    padding-bottom: 24rpx;
}