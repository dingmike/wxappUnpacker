@import "../../components/steps/index.wxss";

page {
    height: 100%;
}

.tabs {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 90rpx;
    background: #fff;
    white-space: nowrap;
    z-index: 100;
}

.tab {
    display: inline-block;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 32rpx;
    color: #666;
    text-align: center;
}

.active {
    color: #ff5777;
    border-bottom: #ff5777 2rpx solid;
}

.logisticslist-wrap {
    width: 100%;
    height: 100%;
}

.logisticslist {
    background: #fff;
    border-bottom: 1px solid #e5e5e5;
    padding: 20rpx 20rpx 0;
    font-size: 28rpx;
}

.logisticslist-item {
    position: relative;
    width: 144rpx;
    height: 144rpx;
    margin-right: 20rpx;
}

.logisticslist-item--cover {
    width: 144rpx;
    height: 144rpx;
}

.logisticslist-item--number {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 36rpx;
    line-height: 36rpx;
    color: #fff;
    background: rgba(0,0,0,0.3);
    text-align: center;
    font-size: 22rpx;
}

.logisticslist-title {
    padding: 0 0 20rpx 10rpx;
    margin-bottom: 25rpx;
    border-bottom: 1rpx solid #ddd;
    line-height: 45rpx;
}

.logisticslist-title--tel {
    color: #ff5777;
}

.logisticslist-content {
    padding-left: 10rpx;
}

.logisticslist-name {
    margin-bottom: 20rpx;
}

.logisticslist-info {
    margin-bottom: 20rpx;
}

.detail-content-desc {
    line-height: 30rpx;
}

.logisticsline {
    height: 9rpx;
    background: -13rpx url('https://s10.mogucdn.com/p2/170214/126946420_07l7d36300234hlef16ggj1275537_88x10.png') repeat-x;
}